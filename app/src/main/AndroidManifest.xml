<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.yap.app">

    <uses-sdk
        android:protectionLevel="signature"
        tools:overrideLibrary="com.leanplum, com.google.android.gms" />

    <permission
        android:name="co.yap.app.permission"
        android:protectionLevel="signature" />

    <application
        android:name=".AAPApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:remove="android:debuggable"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:theme,android:allowBackup,android:label">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="co.yap.app.OPEN_LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="yap_referral" />

            </intent-filter>
        </activity>

        <activity
            android:name="co.yap.modules.forgotpasscode.activities.ForgotPasscodeActivity"
            android:screenOrientation="portrait">
            <nav-graph android:value="@navigation/forgot_passcode_navigation" />
        </activity>

        <activity
            android:name="co.yap.modules.dashboard.yapit.y2y.home.activities.YapToYapDashboardActivity"
            android:screenOrientation="portrait">
            <nav-graph android:value="@navigation/yap_to_yap_navigation" />
        </activity>
        <activity
            android:name=".modules.login.activities.VerifyPassCodePresenterActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"
            tools:replace="android:value" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--android:name="com.leanplum.LeanplumPushFirebaseMessagingService"-->
        <service
            android:name="co.yap.app.service.CustomFirebaseMessagingService"
            android:exported="false"
            android:permission="co.yap.app.permission">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>



<!--        <receiver-->
<!--            android:name="co.yap.modules.others.helper.InstallReceiver"-->
<!--            android:permission="android.permission.INSTALL_PACKAGES"-->
<!--            android:exported="true" >-->
<!--            <intent-filter>-->
<!--                <action android:name="com.android.vending.INSTALL_REFERRER" />-->
<!--            </intent-filter>-->
<!--        </receiver>-->

        <receiver
            android:name="com.adjust.sdk.AdjustReferrerReceiver"
            android:permission="android.permission.INSTALL_PACKAGES"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>