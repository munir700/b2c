<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="co.yap.app.modules.login.viewmodels.VerifyPasscodeViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="co.yap.app.modules.login.activities.VerifyPasscodeActivity">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvVerifyPasscodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Large"
            android:layout_marginTop="@dimen/margin_small"
            android:lineSpacingExtra="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="center"
            android:gravity="center"
            app:text="@{Strings.screen_verify_passcode_display_text_title}"
            tools:text="@string/screen_verify_passcode_display_text_title"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>