<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        android:layout_margin="24dp"
        android:layout_gravity="center_vertical|center"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

    <co.yap.yapcore.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_radius="50dp"
            android:enabled="true"
            android:textColor="@color/colorWhite"
            android:text="@string/app_name"
            app:text="@string/app_name"
            android:layout_margin="24dp"
            android:gravity="center"
            android:paddingBottom="@dimen/_44sdp"
            app:text_size="@dimen/text_size_h4"
            app:btn_drawable="@drawable/ic_back_arrow_new"
            app:btn_drawable_position="left"
            app:btn_shape_type="rectangle"
            tools:ignore="MissingConstraints"/>

    <co.yap.yapcore.CustomButton
            android:id="@+id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_radius="50dp"
            android:enabled="true"
            android:textColor="@color/colorWhite"
            android:text="@string/app_name"

            app:text="@string/app_name"
            android:layout_margin="24dp"
            android:gravity="center"
            app:text_size="@dimen/text_size_h4"
            app:btn_drawable="@drawable/ic_back_arrow"
            app:btn_drawable_position="right"
            app:btn_shape_type="rectangle"
            tools:ignore="MissingConstraints"/>

    <co.yap.yapcore.CustomButton
            android:id="@+id/close_btn_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_radius="50dp"
            android:enabled="true"
            android:textColor="@color/colorWhite"
            android:text="@string/app_name"
            app:text="@string/app_name"
            android:layout_margin="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            app:text_size="@dimen/text_size_h4"
            app:btn_drawable="@drawable/ic_back_arrow"
            app:btn_drawable_position="left"
            app:btn_shape_type="rectangle"
            tools:ignore="MissingConstraints"/>

    <co.yap.yapcore.CustomButton
            android:id="@+id/close_btn_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_radius="50dp"
            android:enabled="true"
            android:textColor="@color/colorWhite"
            android:text="@string/app_name"
            app:text="@string/app_name"
            android:layout_margin="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            app:text_size="@dimen/text_size_h4"
            android:drawablePadding="@dimen/_20sdp"
            app:btn_shape_type="rectangle"
            tools:ignore="MissingConstraints"/>

