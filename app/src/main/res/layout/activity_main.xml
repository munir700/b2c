<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        android:layout_margin="24dp"
        android:layout_gravity="center_vertical|center"
        android:gravity="center_vertical|center"
        android:orientation="vertical">

    <co.yap.yapcore.CustomButton
            android:id="@+id/search_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:round_radius="50dp"
            android:enabled="true"
            android:textColor="@color/colorWhite"
            app:text="@string/app_name"
            android:layout_margin="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            app:text_size="@dimen/text_size_h3"
            app:btn_shape_type="rectangle"
            tools:ignore="MissingConstraints"/>


    <co.yap.yapcore.CustomButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:enabled="false"
            app:pressed_color="@color/secondaryLight"
            app:round_radius="50dp"
            android:layout_marginTop="20dp"
            app:btn_shape_type="circle"
            app:unpressed_color="@color/colorPrimary"
    />
</LinearLayout>