    <co.yap.yapcore.CustomButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:enabled="false"
            app:pressed_color="@color/secondaryLight"
            app:round_radius="50dp"
            android:layout_marginTop="20dp"
            app:btn_drawable="@drawable/ic_back_arrow"
            app:btn_shape_type="circle"
            app:unpressed_color="@color/colorPrimary"/>
</LinearLayout>