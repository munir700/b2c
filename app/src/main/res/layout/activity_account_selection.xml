<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_medium">


    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_medium_large"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTagLine"
        />

    <TextView
        android:id="@+id/tvTagLine"
        android:text="@string/screen_home_display_text_tag_line"
        style="@style/ALargeGrey"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        />

    <ImageView
        android:id="@+id/ivOnboarding"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/group"
        app:layout_constraintTop_toBottomOf="@+id/tvTagLine"
        android:layout_marginTop="@dimen/margin_medium_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintHorizontal_bias="0.49"/>

    <TextView
        android:id="@+id/tvDisplayTestAccountSelection"
        android:text="@string/screen_home_display_text_account_selection"
        style="@style/ARegularGrey"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivOnboarding"/>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplayTestAccountSelection"
        >

        <co.yap.yapcore.CoreButton
            android:id="@+id/btnPersonal"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            style="@style/RectangleBtnStyle"
            android:enabled="true"
            android:text="@string/screen_home_button_personal_text"
            android:paddingEnd="@dimen/margin_xl"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginTop="@dimen/margin_medium"
            android:textStyle="bold"
            android:paddingTop="@dimen/margin_normal_large"
            android:paddingBottom="@dimen/margin_normal_large"/>

        <co.yap.yapcore.CoreButton
            android:id="@+id/btnBusiness"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            style="@style/RectangleBtnStyle"
            android:text="@string/screen_home_button_business_text"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/btnPersonal"
            android:layout_marginStart="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal_large"
            android:paddingBottom="@dimen/margin_normal_large"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvDisplayTextSignIn"
        android:text="@string/screen_home_display_text_sign_in_title"
        style="@style/ARegularGrey"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/margin_normal_large"
        app:layout_constraintTop_toBottomOf="@+id/layoutButtons"
        android:layout_marginStart="@dimen/margin_medium"
        app:layout_constraintStart_toStartOf="@+id/layoutButtons"/>

    <TextView
        android:id="@+id/tvSignIn"
        android:text="@string/screen_home_display_text_sign_in"
        style="@style/ARegularGrey"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@+id/tvDisplayTextSignIn"
        android:paddingStart="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large"
        android:paddingTop="@dimen/margin_normal_large"
        app:layout_constraintTop_toBottomOf="@+id/layoutButtons"/>

</androidx.constraintlayout.widget.ConstraintLayout>