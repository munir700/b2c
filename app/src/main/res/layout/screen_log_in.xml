<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginViewModel"
            type="co.yap.app.modules.login.viewmodels.LoginViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bg_group_bubbles"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-450dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="co.yap.app.modules.login.activities.LogInActivity">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/view_tool_bar"
                    app:layout_constraintBottom_toBottomOf="@+id/btnLogIn"
                    tools:layout_editor_absoluteX="0dp"/>

                <ImageView
                    android:id="@+id/ivYap"
                    android:layout_width="84dp"
                    android:layout_height="33dp"
                    app:srcCompat="@drawable/ic_yap"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/_146sdp"/>

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/LargeGrey"
                    android:text="@string/screen_sign_in_display_text_heading_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/ivYap"/>

                <co.yap.widgets.CoreInputField
                    android:id="@+id/etEmailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xxl"
                    app:coreInputText="@{loginViewModel.state.email}"
                    app:view_hint_input_field="@string/screen_sign_in_input_text_email_hint"
                    app:layout_constraintTop_toBottomOf="@+id/tvSignIn"/>

                <co.yap.widgets.CoreButton
                    android:id="@+id/btnLogIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/RectangleBtnStyle"
                    android:enabled="@{loginViewModel.state.valid}"
                    android:textColor="@color/colorWhite"
                    android:text="@string/screen_sign_in_button_sign_in"
                    android:onClick="@{(v) -> loginViewModel.handlePressOnLogin()}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etEmailField"
                    android:paddingTop="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvSignUp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30sdp"
                    android:paddingStart="@dimen/_30sdp"
                    app:btn_drawable_position="left"
                    tools:ignore="MissingConstraints"
                    app:layout_constraintVertical_bias="0.75"/>

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/screen_sign_in_display_text_sign_up"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>