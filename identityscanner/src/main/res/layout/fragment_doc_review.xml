<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.digitify.identityscanner.modules.docscanner.viewmodels.DocReviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".modules.docscanner.fragments.DocReviewFragment">

        <ImageView
            android:id="@+id/quick_doc_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/semi_black"
            android:padding="4dp"
            app:bitmap="@{model.state.previewBitmap}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@drawable/white_round_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/review_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{model.state.reviewText}"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/border_round_gray_background"
                    android:onClick="@{(v) -> model.handleClickOnCancel()}"
                    android:text="@string/cancel"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:background="@{model.state.docValid ? @drawable/border_round_hollow_background : @drawable/border_round_filled_background}"
                    android:onClick="@{(v) -> model.handleClickOnRetake()}"
                    android:text="@string/retake"
                    android:textColor="@{model.state.docValid ? @color/colorPrimary : @color/white}" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:visibility="@{model.state.docValid ? View.VISIBLE : View.GONE}"
                    android:background="@drawable/border_round_filled_background"
                    android:onClick="@{(v) -> model.handleClickOnDone()}"
                    android:text="@string/done"
                    android:textColor="@drawable/white_clickable_text" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>