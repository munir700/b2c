<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/record_progress"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:cpb_background_progressbar_color="@color/light_grey"
        app:cpb_background_progressbar_width="3dp"
        app:cpb_progress="0"
        app:cpb_progressbar_color="?attr/colorPrimaryAttr"
        app:cpb_progressbar_width="4dp" />

    <com.digitify.identityscanner.components.CircleImageView
        android:id="@+id/record_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_stop"
        app:ci_color="@color/red"
        app:ci_pressedRingWidth="0dip" />

</FrameLayout>