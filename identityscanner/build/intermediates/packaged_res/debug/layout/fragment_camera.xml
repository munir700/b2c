<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    

                                          

                                               

                 
                        
                                                                                               
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".modules.docscanner.fragments.YapCameraFragment" android:tag="layout/fragment_camera_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.digitify.identityscanner.components.OpenCVCameraView
                android:id="@+id/opencvCam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:camera_id="any"
                app:show_fps="false"/>

            <com.digitify.identityscanner.modules.docscanner.components.Overlay
                android:id="@+id/drawView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.digitify.identityscanner.components.TransparentCardView
                android:id="@+id/cardOverlay"
                app:cardMarginTop="130dp"
                app:cardCorners="8dp"
                app:cardMarginHorizontal="16dp"
                app:cardBorderColor="@color/colorPrimary"
                app:cardColor="@color/kycCard"
                app:backgroundColor="@color/transparent"
                app:cardBorderDashed="true"
                app:cardBorderDashSpan="7dp"
                app:cardBorderWidth="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/cam_inst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/white_round_background"
            android:gravity="center"
            android:padding="4dp"
            android:tag="binding_1"                   
            android:textSize="12sp"
                                                                                                          
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/semi_white_80"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/cam_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                style="@style/ARegularGrey"
                android:tag="binding_2"                       
                tools:text="Step 1 of 2"/>

            <TextView
                android:id="@+id/cam_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/ALarge"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:tag="binding_3"            
                tools:text="Scan Front side"
                android:textColor="@color/black"/>

            <co.yap.widgets.CoreButton
                android:id="@+id/camFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:layout_gravity="center"
                android:tag="binding_4"                        
                android:layout_margin="24dp"
                style="@style/RectangleBtnStyle"
                tools:text="Scan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:padding="8dp"
                                                             />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         