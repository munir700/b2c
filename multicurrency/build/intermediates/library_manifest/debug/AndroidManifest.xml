            android:name="co.yap.multicurrency.base.MCLandingActivty"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
            <nav-graph android:value="@navigation/navigation_wallet" />
        </activity>
        <activity
            android:name="co.yap.multicurrency.ratesalerts.base.RatesAndAlertsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
