<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                      

                                                    

                                           

                                                

           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/item_wallet_v2_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <FrameLayout
            android:id="@+id/flSwipeable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:background="@color/colorSecondaryMagenta"
            android:paddingStart="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_normal"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_delete_bin"
                android:drawablePadding="@dimen/_2sdp"
                android:drawableTint="@color/white"
                android:gravity="center"
                android:textColor="@color/white"
                android:tag="binding_1"                   
                tools:text="Delete" />
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/foregroundContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_medium_large"
            android:paddingTop="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_medium_large"
            android:paddingBottom="@dimen/margin_normal"
            tools:visibility="invisible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlag"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/flag_ae" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmount"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_2"                
                    tools:text="5000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCurrencyUnit"
                    style="@style/SmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:tag="binding_3"                      
                    android:textColor="@color/grey"
                    tools:text="AED" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrow"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:rotation="180"
                app:srcCompat="@drawable/ic_back_arrow_left" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
         