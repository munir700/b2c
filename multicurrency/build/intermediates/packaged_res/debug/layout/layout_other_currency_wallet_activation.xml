<?xml version="1.0" encoding="utf-8"?>
                                                       

    

                 
                            
                                                                               

                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/layout_other_currency_wallet_activation_0" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swActivateWallet"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:paddingTop="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:theme="@style/CustomSwitch"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="binding_1"                                                        
            tools:text="Activated wallet" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalletDescription"
            style="@style/MicroGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_extra_large"
            app:layout_constraintEnd_toEndOf="@+id/swActivateWallet"
            app:layout_constraintStart_toStartOf="@+id/swActivateWallet"
            app:layout_constraintTop_toBottomOf="@+id/swActivateWallet"
            android:tag="binding_2"                                                          
            tools:text="Your CAD currency will be used first whenever you pay in Canada. Turn off to default to your AED account for transactions happening in Canada" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:alpha="0.35"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/tvWalletDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         