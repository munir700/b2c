<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                  

                                                    

                                           

           

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical" android:tag="layout/fragment_wallet_v2_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_medium_large"
            android:paddingTop="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_medium_large"
            android:paddingBottom="@dimen/margin_normal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeading"
                style="@style/Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/screen_multi_currency_wallet_display_text_active_wallets"
                android:tag="binding_1"                                                       
                tools:text="@string/screen_multi_currency_wallet_display_text_active_wallets" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEdit"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_h2"
                android:tag="binding_2"                                                    
                tools:text="@string/screen_multi_currency_wallet_display_text_edit_wallet" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/foregroundContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_medium_large"
            android:paddingTop="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_medium_large"
            android:paddingBottom="@dimen/margin_normal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlag"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/flag_ae" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmount"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCurrencyUnit"
                    style="@style/SmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/grey"
                    tools:text="AED" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textColor="@color/grey"
                android:textSize="@dimen/_11sdp"
                android:tag="binding_3"                                                
                tools:text="@string/screen_multi_currency_wallet_display_text_primary" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivArrow"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:rotation="180"
                app:srcCompat="@drawable/ic_back_arrow_left" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="#1e979797" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_wallet_v2" />
    </androidx.appcompat.widget.LinearLayoutCompat>
         