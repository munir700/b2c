<?xml version="1.0" encoding="utf-8"?>
                                                       

    

                 
                            
                                                                               

                                                    
           

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAmount" android:tag="layout/layout_wallet_actions_0" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/lyExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:tag="binding_1"                                    
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnExchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:tint="@color/white"
                app:backgroundTint="?attr/colorPrimaryAttr"
                app:elevation="0dp"
                app:fabCustomSize="@dimen/_32sdp"
                app:fabSize="mini"
                app:maxImageSize="@dimen/_18sdp"
                app:srcCompat="@drawable/ic_transaction_rate_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvExchange"
                style="@style/Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:tag="binding_2"                                                    
                tools:text="Exchange"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyRates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:tag="binding_3"                                    
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:tint="@color/white"
                app:backgroundTint="?attr/colorPrimaryAttr"
                app:elevation="0dp"
                app:fabCustomSize="@dimen/_32sdp"
                app:fabSize="mini"
                app:maxImageSize="@dimen/_18sdp"
                app:srcCompat="@drawable/ic_transaction_rate_arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRates"
                style="@style/Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:tag="binding_4"                                                 
                tools:text="Rates"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:tag="binding_5"                                    
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnStatement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:tint="@color/white"
                app:backgroundTint="?attr/colorPrimaryAttr"
                app:elevation="0dp"
                app:fabCustomSize="@dimen/_32sdp"
                app:fabSize="mini"
                app:maxImageSize="@dimen/_18sdp"
                app:srcCompat="@drawable/ic_note" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatement"
                style="@style/Micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:tag="binding_6"                                                     
                tools:text="Statement"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
         