<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                               

                                                    

                                           
           

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/margin_normal"
        android:orientation="vertical" android:tag="layout/fragment_mc_rates_details_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/foregroundContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:minHeight="?android:attr/actionBarSize"
            android:paddingStart="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_normal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_first_curr"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flag_ae"
                tools:src="@drawable/flag_ae" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/iv_first_curr"
                app:layout_constraintEnd_toStartOf="@+id/iv_currency_switch"
                app:layout_constraintStart_toEndOf="@+id/iv_first_curr"
                app:layout_constraintTop_toTopOf="@+id/iv_first_curr">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="1 AED"
                    tools:text="1 AED" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFullName"
                    style="@style/AMicroGrey"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Dirham"
                    tools:text="Dirham" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_currency_switch"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_switch"
                tools:src="@drawable/ic_switch" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_second_curr"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flag_au"
                tools:src="@drawable/flag_au" />

            <LinearLayout
                android:id="@+id/content_second_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_normal"
                android:gravity="end"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/iv_second_curr"
                app:layout_constraintEnd_toStartOf="@+id/iv_second_curr"
                app:layout_constraintStart_toEndOf="@+id/iv_currency_switch"
                app:layout_constraintTop_toTopOf="@+id/iv_second_curr">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSecondCurrency"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="1.09 AUD"
                    tools:text="1.09 AUD" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCurrencyName"
                    style="@style/AMicroGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:lines="1"
                    android:text="Australian dollar"
                    tools:text="Australian dollar" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/margin_extra_small"
            android:elevation="@dimen/margin_extra_small"
            app:cardElevation="@dimen/margin_extra_small">

            <co.yap.widgets.pieview.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp"
                android:layout_gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
         