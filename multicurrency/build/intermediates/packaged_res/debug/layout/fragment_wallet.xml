<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                   

                                                    

                                           

           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fillViewport="true" android:tag="layout/fragment_wallet_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clYapScreenContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:focusableInTouchMode="true"
            android:paddingEnd="@dimen/margin_medium">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeading"
                style="@style/Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="start"
                android:text="@string/screen_multi_currency_wallet_display_text_active_wallets"
                app:layout_constraintEnd_toStartOf="@+id/tvEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tag="binding_1"                                                       
                tools:text="@string/screen_multi_currency_wallet_display_text_active_wallets" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEdit"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="end"
                android:tag="binding_2"                           
                android:paddingEnd="@dimen/small"
                                                                
                android:textColor="?colorPrimaryAttr"
                android:textSize="@dimen/text_size_h2"
                                                                                                 
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvHeading"
                app:layout_constraintTop_toTopOf="parent"
                                                                                           
                tools:text="@string/screen_multi_currency_wallet_display_text_edit_wallet" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPrimaryWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:animateLayoutChanges="true"
                android:focusableInTouchMode="true"
                android:tag="binding_3"                                      
                android:paddingStart="@dimen/small"
                app:layout_constraintTop_toBottomOf="@+id/tvHeading">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/flag_ae" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmount"
                    style="@style/Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:gravity="start"
                    android:text="5000"
                    app:layout_constraintStart_toEndOf="@+id/ivFlag"
                    app:layout_constraintTop_toTopOf="@+id/ivFlag"
                    tools:text="5000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCurrencyUnit"
                    style="@style/SmallGrey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:gravity="start"
                    android:text="AED"
                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/ivFlag"
                    app:layout_constraintStart_toEndOf="@+id/ivFlag"
                    app:layout_constraintTop_toBottomOf="@+id/tvAmount"
                    tools:text="AED" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWalletType"
                    style="@style/Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:gravity="end"
                    android:text="5000"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivArrow"
                    app:layout_constraintStart_toEndOf="@+id/tvCurrencyUnit"
                    app:layout_constraintTop_toTopOf="@+id/tvAmount"
                    android:tag="binding_4"                                                
                    tools:text="@string/screen_multi_currency_wallet_display_text_primary" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:gravity="end"
                    android:scaleX="-1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_back_arrow_left_gery"
                    app:tint="?colorPrimaryAttr" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="#1e979797"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"

                app:layout_constraintTop_toBottomOf="@+id/clPrimaryWallet" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoWallet"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="start"
                android:text="@string/screen_multi_currency_wallet_display_text_no_wallets"
                android:textColor="@color/greyDark"
                android:tag="binding_5"                                                                                                         
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                                                                                          
                tools:text="@string/screen_multi_currency_wallet_display_text_no_wallets" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddNewWallet"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="start"
                android:tag="binding_6"                                      
                android:text="@string/screen_multi_currency_wallet_display_text_add_new_wallet"
                android:textColor="?colorPrimaryAttr"
                                                                                                                                                
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNoWallet"
                                                                                              
                tools:text="@string/screen_multi_currency_wallet_display_text_add_new_wallet" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWallets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:tag="binding_7"                                                          
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                                                                    
                tools:listitem="@layout/item_wallet" />

            <View
                android:id="@+id/secondDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="#1e979797"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:tag="binding_8"                                                                                                      
                app:layout_constraintTop_toBottomOf="@+id/rvWallets" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInactiveWallet"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="start"
                android:text="@string/screen_multi_currency_wallet_display_text_inactive_wallets"
                android:tag="binding_9"                                                            
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondDivider"
                                                                                                
                tools:text="@string/screen_multi_currency_wallet_display_text_inactive_wallets" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInActiveWallets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:tag="binding_10"                                                                   
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInactiveWallet"
                                                                            
                tools:listitem="@layout/item_wallet" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
         