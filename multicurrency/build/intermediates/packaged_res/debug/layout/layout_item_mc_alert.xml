<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                                                

                                                    

                                                                              

           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp" android:tag="layout/layout_item_mc_alert_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_56sdp"
                android:background="@color/colorSecondaryMagenta">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_delete_bin"
                    android:drawablePadding="@dimen/_2sdp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:tag="binding_1"                   
                    tools:text="Delete" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/foregroundContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium">

            <RelativeLayout
                android:id="@+id/rlFlags"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_first_flag"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tag="binding_2"                                             
                    tools:src="@drawable/flag_ae" />

                <LinearLayout
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/bg_round_red"
                    android:backgroundTint="@color/white">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_sec_flag"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:tag="binding_3"                                             
                        tools:src="@drawable/flag_ad" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rlFlags"
                app:layout_constraintTop_toTopOf="@+id/rlFlags">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWishRate"
                    style="@style/Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:tag="binding_4"                                                                                                                                                                      
                    tools:text="1 CAD = AED 2.75" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOriginalRate"
                    style="@style/AMicroGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:tag="binding_5"                                                                                                                                                                          
                    tools:text="1 CAD = AED 2.85" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swActiveInactiveAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomSwitch"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:switchMinWidth="@dimen/_40sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
         