<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    

                                           

                 
                            
                                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/_8sdp"
        android:tag="layout/layout_rates_and_alerts_toolbar_0"                          xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/tbBtnBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:tag="binding_1"                                      
                                                                                    
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_primary" />

        <!--        android:text="@={viewModel.state.tootlBarTitle}"-->

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Regular"
            tools:text="rates and alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tbBtnBack"
            android:layout_toStartOf="@+id/tbBtnRefresh"
            android:gravity="center"
            android:tag="binding_2"                   />

        <ImageView
            android:id="@+id/tbBtnRefresh"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:tag="binding_3"                                  
                                                                                     
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_refresh" />

    </RelativeLayout>
         