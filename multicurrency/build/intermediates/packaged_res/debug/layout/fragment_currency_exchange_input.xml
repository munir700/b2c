<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                                                                

                                                    
           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:animateLayoutChanges="true" android:tag="layout/fragment_currency_exchange_input_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlag"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/margin_medium_large"
                app:layout_constraintBottom_toBottomOf="@+id/etAmountLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etAmountLayout"
                app:srcCompat="@drawable/flag_ca" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSelectedCurrency"
                style="@style/Title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:tag="binding_1"                           
                tools:text="CAD"
                app:layout_constraintBottom_toBottomOf="@+id/ivFlag"
                app:layout_constraintEnd_toStartOf="@+id/etAmountLayout"
                app:layout_constraintStart_toEndOf="@+id/ivFlag"
                app:layout_constraintTop_toTopOf="@+id/ivFlag" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/SmallGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:tag="binding_2"                                           
                tools:text="Balance: $250.00"
                app:layout_constraintEnd_toStartOf="@+id/etAmountLayout"
                app:layout_constraintStart_toStartOf="@+id/ivFlag"
                app:layout_constraintTop_toBottomOf="@+id/tvSelectedCurrency" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etAmountLayout"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:background="@drawable/bg_funds"
                android:paddingStart="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etAmount"
                    style="@style/ATitle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:tag="binding_3"                  
                                                            
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0.00" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAEDFlag"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/margin_medium_large"
                app:layout_constraintBottom_toBottomOf="@+id/etConvertedAmountLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etConvertedAmountLayout"
                app:srcCompat="@drawable/flag_ae" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTargetCurrency"
                style="@style/Title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                tools:text="AED"
                android:tag="binding_4"                         
                app:layout_constraintBottom_toBottomOf="@+id/ivAEDFlag"
                app:layout_constraintEnd_toStartOf="@+id/etConvertedAmountLayout"
                app:layout_constraintStart_toEndOf="@+id/ivAEDFlag"
                app:layout_constraintTop_toTopOf="@+id/ivAEDFlag" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTargetCurrencyBalance"
                style="@style/SmallGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:tag="binding_5"                                         
                tools:text="Balance: $250.00"
                app:layout_constraintEnd_toStartOf="@+id/etConvertedAmountLayout"
                app:layout_constraintStart_toStartOf="@+id/ivFlag"
                app:layout_constraintTop_toBottomOf="@+id/tvTargetCurrency" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etConvertedAmountLayout"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/margin_xxl"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:background="@drawable/bg_funds"
                android:paddingStart="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etAmountLayout">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etConvertedAmount"
                    style="@style/ATitle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:textColor="@color/colorTextHint"
                    android:tag="binding_6"                        
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0.00" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRatesConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:layout_constraintBottom_toTopOf="@+id/btnExchange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etConvertedAmountLayout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvYapRateTitle"
                    style="@style/SmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="YAP rate"
                    android:tag="binding_7"                                                          
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_transaction_rate_arrow"
                    tools:text="1 CAD = 0.67 EUR"
                    android:tag="binding_8"                       
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvYapRateTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <co.yap.widgets.CoreButton
                android:id="@+id/btnExchange"
                style="@style/FragmentsBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginRight="@dimen/margin_xxl"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:tag="binding_9"                                      
                                                                                               
                tools:text="Exchange"
                                                               
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.988"
                app:layout_goneMarginTop="@dimen/margin_extra_large" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
         