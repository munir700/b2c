<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeBoldText" parent="AppFontBold">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/textDarkColor</item>
    </style>
    <style name="LargeText" parent="AppFontRegular">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/textDarkColor</item>
    </style>
    <style name="NormalText" parent="AppFontRegular">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/textDarkColor</item>
    </style>
</resources>
