<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.household.dashboard.home.HouseHoldHomeVM" />

        <import type="co.yap.translation.Strings" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colordisabledTick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_household_home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/rvNotificationList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:dsv_orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/rsbAmount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clHeaderContainer"
            app:rsb_max="200"
            app:rsb_step_drawable="@drawable/ic_seekbar_thumb"
            app:rsb_mode="single"
            app:rsb_steps="2"
            app:rsb_progress_color="@color/colorPrimary"
            app:rsb_progress_default_color="?attr/colorSeekBar"
            app:rsb_progress_height="@dimen/_4sdp"
            app:rsb_progress_radius="@dimen/_2sdp"
            app:rsb_thumb_drawable="@drawable/ic_seekbar_thumb"
            app:rsb_thumb_height="@dimen/_50sdp"
            app:rsb_thumb_width="@dimen/_50sdp" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/rsbAmount"
            app:layout_constraintStart_toStartOf="parent" />

        <co.yap.widgets.radiocus.PresetRadioGroup
            android:id="@+id/selectorGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:weightSum="2"
            app:layout_constraintBottom_toTopOf="@+id/clTransactionHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:presetRadioCheckedId="@id/firstIndicator"
            app:rangeSeekBarId="@id/rsbAmount"
            >

            <co.yap.widgets.radiocus.PresetValueButton
                android:id="@+id/firstIndicator"
                style="@style/ALarge"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/background_selector_preset_button"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                app:lable1="My money"
                app:lable2="AED 1000.00" />

            <co.yap.widgets.radiocus.PresetValueButton
                android:id="@+id/secondIndicator"
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:background="@drawable/background_selector_preset_button"
                android:gravity="center"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textStyle="normal"
                app:lable1="Expense money"
                app:lable2="AED 257.00" />

        </co.yap.widgets.radiocus.PresetRadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTransactionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:layout_marginBottom="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectorGroup">

            <TextView
                android:id="@+id/tvTransactionTitle"
                style="@style/ASmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@{Strings.screen_household_home_display_text_transactions_heading_title}"
                tools:text="@string/screen_household_home_display_text_transactions_heading_title" />

            <!--                <TextView-->
            <!--                    android:id="@+id/tvFilterCount"-->
            <!--                    style="@style/ASmall"-->
            <!--                    android:layout_width="@dimen/_22sdp"-->
            <!--                    android:layout_height="@dimen/_22sdp"-->
            <!--                    android:layout_marginEnd="5dp"-->
            <!--                    android:background="@drawable/bg_round_purple"-->
            <!--                    android:gravity="center"-->
            <!--                    android:text="@{viewModel.state.filterCount.toString()}"-->
            <!--                    android:textColor="@color/colorPrimary"-->
            <!--                    android:visibility="@{viewModel.state.filterCount > 0 ? View.VISIBLE:View.GONE}"-->
            <!--                    tools:text="6" />-->

            <ImageView
                android:id="@+id/ivFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_filter"
                app:layout_constraintBottom_toBottomOf="@id/tvTransactionTitle"
                app:layout_constraintEnd_toStartOf="@id/tvFilters"
                app:layout_constraintTop_toTopOf="@id/tvTransactionTitle" />

            <TextView
                android:id="@+id/tvFilters"
                style="@style/ASmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/tvTransactionTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTransactionTitle"
                app:text="@{Strings.screen_household_home_display_text_transactions_filers_title}"
                tools:text="@string/screen_household_home_display_text_transactions_filers_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/divider"
            app:layout_constraintTop_toBottomOf="@id/clTransactionHeader" />

        <co.yap.widgets.MultiStateView
            android:id="@+id/multiStateView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:msv_animateViewChanges="true"
            app:msv_emptyView="@layout/layout_home_no_transaction"
            app:msv_loadingView="@layout/layout_loading_view">

            <co.yap.yapcore.transactions.TransactionRecyclerView
                android:id="@+id/transactionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:txnList="@{viewModel.state.transactionList}" />
        </co.yap.widgets.MultiStateView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
