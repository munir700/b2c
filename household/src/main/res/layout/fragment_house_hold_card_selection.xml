<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="houseHoldViewModel"
            type="co.yap.household.onboarding.onboarding.viewmodels.HouseHoldCardsSelectionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:gravity="center"
            android:text="@{houseHoldViewModel.state.cardsHeading}"
            android:textColor="@color/textDarkColor"
            android:textSize="@dimen/text_size_h5"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/screen_house_hold_card_color_selection_display_text_heading"

            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnNext"
            app:layout_constraintTop_toBottomOf="@+id/tvHeading"
            app:layout_constraintVertical_bias="0.250" />

        <co.yap.widgets.CoreButton
            android:id="@+id/btnNext"
            style="@style/RectangleBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_large"
            android:layout_marginRight="@dimen/margin_medium_large"
            android:layout_marginBottom="40dp"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_medium"
            android:text="Next"
            app:btn_enable="true"
            app:btn_pressed_color="@color/colorPrimary"
            app:btn_text_color="@color/colorPrimaryDark"
            app:btn_unpressed_color="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Next" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>