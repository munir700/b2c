<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.household.dashboard.home.HomeTransactionChildItemVM" />

        <import type="co.yap.yapcore.helpers.extentions.TransactionExtentionsKt" />

        <import type="co.yap.translation.Translator" />

        <import type="co.yap.yapcore.helpers.DateUtils" />

        <import type="co.yap.yapcore.helpers.ImageBinding" />

        <import type="co.yap.yapcore.enums.TxnType" />

        <import type="co.yap.translation.Strings" />

        <import type="co.yap.yapcore.helpers.extentions.StringExtensionsKt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_normal"
        android:paddingEnd="@dimen/margin_normal">

        <FrameLayout
            android:id="@+id/flImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivTransaction"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/bg_round_purple_enabled"
                app:transaction="@{viewModel.item}"
                tools:src="@drawable/ic_grey_minus_transactions" />

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivIncoming"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/_6sdp"
                android:visibility="visible"
                tools:src="@drawable/ic_outgoing_transaction" />
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flImageLayout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionName"
                style="@style/ASmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@{TransactionExtentionsKt.getTransactionTitle(viewModel.item)}"
                android:textColor="@{TransactionExtentionsKt.isTransactionCancelled(viewModel.item)? @color/greyNormalDark:@color/colorMidnightExpress}"
                tools:text="Amazon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionAmount"
                style="@style/SmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.item.txnType == null?` `:(TxnType.valueOf(viewModel.item.txnType) == TxnType.CREDIT?`+ ` + StringExtensionsKt.toFormattedCurrency(viewModel.item.amount.toString()): `- `+StringExtensionsKt.toFormattedCurrency(viewModel.item.totalAmount.toString())) }"
                android:textColor="@{TransactionExtentionsKt.isTransactionCancelled(viewModel.item)? @color/greyNormalDark:(TxnType.valueOf(viewModel.item.txnType) == TxnType.CREDIT?@color/colorSecondaryGreen :@color/colorPrimaryDark )}"
                tools:text="18:25" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flImageLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTransactionTimeAndCategory"
                style="@style/ASmallGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{Translator.INSTANCE.getString(context,Strings.screen_fragment_home_transaction_time_category , TransactionExtentionsKt.getFormattedTime(viewModel.item,DateUtils.INSTANCE.FORMAT_TIME_24H), TransactionExtentionsKt.getTransactionTypeTitle(viewModel.item))}"
                android:textColor="@{TransactionExtentionsKt.isTransactionCancelled(viewModel.item)? @color/greyNormalDark:@color/greyDark}"
                tools:text="- 21.00" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCurrency"
                style="@style/SmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{TransactionExtentionsKt.getCurrency(viewModel.item)}"
                android:textColor="@{TransactionExtentionsKt.isTransactionCancelled(viewModel.item)? @color/greyNormalDark:@color/greyDark}"
                tools:text="AED" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTransactionNote"
            style="@style/ASmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@{viewModel.item.transactionNote}"
            android:textColor="@color/greyNormalDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flImageLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
            tools:text="Note goes here Only show first line " />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flImageLayout"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionNote" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>