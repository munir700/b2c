<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.yap.household">

    <application
        tools:remove="android:debuggable"
        android:allowBackup="false"
        tools:replace="android:allowBackup"
        android:supportsRtl="true">

        <activity
            android:name=".onboard.onboarding.main.OnBoardingHouseHoldActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeHouseHold.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <nav-graph android:value="@navigation/hh_sub_account_onboarding_navigation" />
        </activity>

        <activity
            android:name=".onboard.cardselection.HouseHoldCardsSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeHouseHold.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="co.yap.household.onboard.onboarding.kycsuccess.KycSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dashboard.main.HouseholdDashboardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".onboard.onboarding.invalideid.InvalidEIDFragment"
            android:screenOrientation="portrait" />

        <activity
            android:name=".onboard.onboarding.householdsuccess.HouseHoldSuccessFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".onboard.onboarding.existinghousehold.ExistingHouseholdFragment"
            android:screenOrientation="portrait" />
    </application>

</manifest>
