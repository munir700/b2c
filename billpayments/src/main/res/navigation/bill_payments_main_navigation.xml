<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bill_payments_main_navigation"
    app:startDestination="@id/payBillsFragment">

    <fragment
        android:id="@+id/payBillsFragment"
        android:name="co.yap.billpayments.paybills.PayBillsFragment"
        android:label="PayBillsFragment"
        tools:layout="@layout/fragment_pay_bills">
        <action
            android:id="@+id/action_payBillsFragment_to_myBillsFragment"
            app:destination="@id/myBillsFragment" />
        <action
            android:id="@+id/action_payBillsFragment_to_addBillFragment"
            app:destination="@id/addBillFragment" />
    </fragment>

    <fragment
        android:id="@+id/billersFragment"
        android:name="co.yap.billpayments.billers.BillersFragment"
        android:label="BillersFragment"
        tools:layout="@layout/fragment_billers">
        <action
            android:id="@+id/action_billersFragment_to_billerSearchFragment"
            app:destination="@id/billerSearchFragment" />
    </fragment>

    <fragment
        android:id="@+id/billerSearchFragment"
        android:name="co.yap.billpayments.billers.search.BillerSearchFragment"
        android:label="BillerSearchFragment"
        tools:layout="@layout/fragment_biller_search" />

    <fragment
        android:id="@+id/myBillsFragment"
        android:name="co.yap.billpayments.mybills.MyBillsFragment"
        android:label="MyBillsFragment"
        tools:layout="@layout/fragment_my_bills" />
    <fragment
        android:id="@+id/addBillFragment"
        android:name="co.yap.billpayments.billcategory.BillCategoryFragment"
        android:label="AddBillFragment" />
</navigation>
