<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.billpayments.billerdetail.adapter.BillerDetailItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.CollapsedColoredHintTextInputLayout
            android:id="@+id/tvInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:hint="@{viewModel.billerDetailInputFieldModel.key}"
            android:textColorHint="@color/colorPrimaryDark"
            app:hintTextAppearance="@style/LabelTextStyl"
            app:hintTextColorSelected="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="Card Number">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{viewModel.billerDetailInputFieldModel.background}"
                android:drawableEnd="@{viewModel.billerDetailInputFieldModel.drawableEnd}"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="@{viewModel.billerDetailInputFieldModel.billerDetailInputTypes.inputType}"
                android:maxLength="@{viewModel.billerDetailInputFieldModel.maxLength}"
                android:singleLine="true"
                android:text="@{viewModel.billerDetailInputFieldModel.value}"
                android:theme="@style/Theme.EditText.Primary"
                app:hint="@{viewModel.billerDetailInputFieldModel.placeHolder}"
                tools:hint="Card Number" />

        </co.yap.widgets.CollapsedColoredHintTextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:text="@{viewModel.billerDetailInputFieldModel.errorText}"
            android:textColor="@color/greyDark"
            app:layout_constraintTop_toBottomOf="@+id/tvInputField"
            tools:text="this email is registered with another account" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
