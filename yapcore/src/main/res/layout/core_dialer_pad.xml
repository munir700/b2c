<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
>

    <EditText
            android:id="@+id/etPassCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="6854"
            android:focusable="false"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="28sp"/>

    <LinearLayout
            android:id="@+id/llPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
    android:orientation="horizontal">

        <View
                android:id="@+id/passCode1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/passcode_empty_circle"
                android:gravity="center_horizontal"
               />
        <EditText
                android:id="@+id/passCode2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="20dp"
                android:focusable="false"
                android:background="@drawable/passcode_empty_circle"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"/>
        <EditText
                android:id="@+id/passCode3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:focusable="false"
                android:layout_marginEnd="20dp"
                android:background="@drawable/passcode_empty_circle"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"/>
        <EditText
                android:id="@+id/passCode4"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:focusable="false"
                android:background="@drawable/passcode_empty_circle"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/button1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="1"
                android:textColor="@drawable/bg_text_color"/>

        <Button
                android:id="@+id/button2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="2"
                android:textColor="@drawable/bg_text_color"/>

        <Button
                android:id="@+id/button3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="3"
                android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <Button
                android:id="@+id/button4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_round_selector"
                android:text="4"
                android:textColor="@drawable/bg_text_color"/>

        <Button
                android:id="@+id/button5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="5"
                android:textColor="@drawable/bg_text_color"
        />

        <Button
                android:id="@+id/button6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="6"
                android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <Button
                android:id="@+id/button7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_round_selector"
                android:text="7"
                android:textSize="20sp"
                android:textColor="@drawable/bg_text_color"/>

        <Button
                android:id="@+id/button8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="8"
                android:textColor="@drawable/bg_text_color"/>

        <Button
                android:id="@+id/button9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="9"
                android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
        />
        <Button
                android:id="@+id/button0"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_round_selector"
                android:text="0"
                android:textColor="@drawable/bg_text_color"/>
        <Button
                android:id="@+id/buttonRemove"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:background="@drawable/bg_round_selector"
                android:text="9"
                android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

</LinearLayout>