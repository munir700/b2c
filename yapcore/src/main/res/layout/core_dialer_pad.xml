<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/llPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/llPasscodeFirstRow"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintVertical_bias="0.186"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/bg_fingerprint"
            />

        <ImageView
            android:id="@+id/ivTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:visibility="gone"
            android:src="@drawable/bg_fingerprint"
            />

        <ImageView
            android:id="@+id/ivThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/bg_fingerprint"
            />

        <ImageView
            android:id="@+id/ivFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/bg_fingerprint"
            />

        <ImageView
            android:id="@+id/ivFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/bg_fingerprint"
            />

        <ImageView
            android:id="@+id/ivSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/bg_fingerprint"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etPassCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="6854"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/llPasscodeFirstRow"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintVertical_bias="0.186"
        android:focusable="false"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_h7"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/error"
        app:layout_constraintTop_toBottomOf="@+id/etPassCodeText"
        android:gravity="center"
        tools:text="Error"
        android:textSize="12sp"/>


    <LinearLayout
        android:id="@+id/llPasscodeFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvError"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="1"
            android:textColor="@drawable/bg_text_color"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="2"
            android:textColor="@drawable/bg_text_color"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="3"
            android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPasscodeSecondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llPasscodeFirstRow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/text_size_h5"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_round_selector"
            android:text="4"
            android:textColor="@drawable/bg_text_color"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="5"
            android:textColor="@drawable/bg_text_color"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="6"
            android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPasscodeThirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llPasscodeSecondRow"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_round_selector"
            android:text="7"
            android:textSize="@dimen/text_size_h5"
            android:textColor="@drawable/bg_text_color"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="8"
            android:textColor="@drawable/bg_text_color"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:textSize="@dimen/text_size_h5"
            android:background="@drawable/bg_round_selector"
            android:text="9"
            android:textColor="@drawable/bg_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llPasscodeThirdRow"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFingerPrint"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@null"
            />

        <Button
            android:id="@+id/button0"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/text_size_h5"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_round_selector"
            android:text="0"
            android:textColor="@drawable/bg_text_color"/>


        <ImageView
            android:id="@+id/buttonRemove"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="20dp"
            android:padding="@dimen/_14sdp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_delete"
            android:textColor="@drawable/bg_text_color"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>