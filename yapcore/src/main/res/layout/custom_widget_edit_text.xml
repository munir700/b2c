<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlTopMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/etInputField"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_round_edit_text"
                tools:autofillHints="First name"
                tools:hint="First name"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/colorPrimaryDark"
                android:paddingEnd="20dp"
                android:textIsSelectable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AMicroGrey"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingStart="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_below="@+id/etInputField"/>


        </RelativeLayout>
    </LinearLayout>
</layout>