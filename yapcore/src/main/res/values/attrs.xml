<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomButton">
        <attr name="text_color" format="color"/>
        <attr name="text" format="reference"/>
        <attr name="btn_drawable" format="reference"/>
         <attr name="text_size" format="dimension"/>
        <attr name="pressed_color" format="color"/>
        <attr name="unpressed_color" format="color"/>
        <attr name="round_radius" format="dimension"/>
        <attr name="btn_radius" format="dimension"/>
        <attr name="btn_set_position" format="dimension"/>

        <attr name="btn_shape_type" format="enum">
            <enum name="circle" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>

        <attr name="btn_drawable_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomImageButton">
        <attr name="pressed_src" format="reference"/>
        <attr name="unpressed_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="view_input_field">
        <attr name="view_hint_input_field" format="reference" />
        <attr name="view_error_input_field" format="reference"/>
        <attr name="view_right_drawable" format="reference" />


    </declare-styleable>
</resources>