<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CoreButton">
        <attr name="btn_text_color" format="color"/>
        <attr name="btn_drawable" format="reference"/>
        <attr name="btn_text_size" format="dimension"/>
        <attr name="btn_pressed_color" format="color"/>
        <attr name="btn_unpressed_color" format="color"/>
        <attr name="btn_round_radius" format="dimension"/>
        <attr name="btn_radius" format="dimension"/>
        <attr name="btn_drawable_padding_top" format="float"/>
        <attr name="btn_drawable_padding_right" format="float"/>
        <attr name="btn_drawable_padding_left" format="float"/>
        <attr name="btn_enable" format="boolean"/>

        <attr name="btn_shape_type" format="enum">
            <enum name="circle" value="0"/>
            <enum name="rectangle" value="1"/>
        </attr>

        <attr name="btn_drawable_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomImageButton">
        <attr name="pressed_src" format="reference"/>
        <attr name="unpressed_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CoreInputField">
        <attr name="view_hint_input_field" format="reference"/>
        <attr name="view_error_input_field" format="reference"/>
        <attr name="view_drawable_right" format="reference"/>
        <attr name="view_drawable_left" format="reference"/>
        <attr name="view_focusable" format="boolean"/>
        <attr name="view_input_text" format="string"/>
        <attr name="view_max_length" format="integer"/>
        <attr name="view_id" format="integer"/>

        <attr name="view_input_text_imei_actions" format="enum">
            <enum name="IME_ACTION_DONE" value="1"/>
            <enum name="IME_ACTION_NEXT" value="2"/>
        </attr>

        <attr name="view_input_type" format="enum">
            <enum name="phone" value="1"/>
            <enum name="email" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CoreDialerPad">
        <attr name="dialer_max_length" format="integer"/>
        <attr name="dialer_error" format="reference"/>
        <attr name="dialer_pass_code" format="enum">
            <enum name="defaultType" value="0"/>
            <enum name="passcode" value="1"/>
        </attr>

    </declare-styleable>

    <!-- Font Awesome attr-->
    <declare-styleable name="FontTextView">
        <attr name="brand_icon" format="boolean"/>
        <attr name="solid_icon" format="boolean"/>
    </declare-styleable>
</resources>