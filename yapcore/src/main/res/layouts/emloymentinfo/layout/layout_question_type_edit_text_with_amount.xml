<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.location.kyc_additional_info.employment_info.questionnaire.adapter.QuestionnaireItemViewModel" />

        <import type="android.view.View" />

        <import type="co.yap.translation.Strings" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyTinNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTinNumber"
                style="@style/ASmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:gravity="center"
                android:text="@{viewModel.question.question}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_reasons"
                tools:text="@string/screen_tax_info_display_text_heading_tin_number" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etTinNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@null"
                android:gravity="bottom"
                android:hint="@{viewModel.question.placeholder}"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="20"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingEnd="@dimen/margin_extra_small"
                android:paddingBottom="@dimen/margin_extra_small"
                android:text="@={viewModel.question.answer}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_normal"
                android:background="@color/greyLight" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>