    <style name="Yap.App.Widget.TabTextAppearance" parent="@style/TabTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Yap.App.Widget.ImageView.Circle" parent="Yap.App.Widget.ImageView">
        <item name="android:layout_width">@dimen/_62sdp</item>
        <item name="android:layout_height">@dimen/_62sdp</item>
        <item name="android:contentDescription">@string/empty_string</item>
    </style>

    <style name="Yap.App.Widget.ImageView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/empty_string</item>
    </style>

    <style name="Yap.App.Widget.FloatingActionButton.Circle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimaryAttr</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">@dimen/_32sdp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">@dimen/_18sdp</item>
    </style>

    <style name="Yap.App.Widget.FloatingActionButton.Circle.Large" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorPrimaryAttr</item>
        <item name="backgroundTint">@color/bg_round_light_primary_soft</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">@dimen/_32sdp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">@dimen/_18sdp</item>
    </style>

    <style name="Yap.App.Widget.FloatingActionButton.Circle.Small" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/white</item>
        <item name="backgroundTint">?attr/colorPrimarySoftAttr</item>
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">@dimen/_20sdp</item>
        <item name="fabSize">mini</item>
        <item name="maxImageSize">@dimen/_14sdp</item>
    </style>

    <style name="Yap.App.Widget.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Yap.App.Widget.CollapsingToolbarLayout" parent="Widget.Design.CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed|snap</item>
        <item name="titleEnabled">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Yap.App.Widget.FilterCount" parent="ASmall">
        <item name="android:layout_width">@dimen/_22sdp</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
        <item name="android:background">@drawable/bg_round_purple</item>
        <item name="android:textColor">?attr/colorPrimaryAttr</item>
    </style>


    <style name="Yap.App.Widget.TextInputEditText.EasyMoney" parent="Yap.App.Widget.TextInputEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_funds</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingTop">@dimen/margin_normal_large</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">@dimen/margin_normal_large</item>
        <item name="android:maxLength">7</item>
        <item name="currency_symbol">$</item>
        <item name="show_commas">true</item>
        <item name="show_currency">false</item>
    </style>

    <style name="Yap.App.Widget.TextInputEditText.EasyMoney.Suggestion" parent="Yap.App.Widget.TextInputEditText.EasyMoney">
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_background_selected</item>
        <item name="android:paddingTop">@dimen/margin_zero_dp</item>
        <item name="android:paddingBottom">@dimen/margin_zero_dp</item>
        <item name="android:paddingStart">@dimen/margin_normal_large</item>
        <item name="android:paddingEnd">@dimen/margin_normal_large</item>
        <item name="android:textColor">?colorPrimaryAttr</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <style name="Yap.App.Layout.CardView" parent="CardView">
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/lift_on_touch</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Yap.App.Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:button">@color/transparent</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Yap.App.Widget.TextInputEditText.SetPin" parent="Yap.App.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/_60sdp</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:paddingEnd">@dimen/_60sdp</item>
    </style>

    <style name="Yap.App.Widget.TextInputEditText.PinCode" parent="Yap.App.Widget.TextInputEditText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:maxLength">6</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="Yap.App.Widget.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/Yap.Widget.App.TextInputLayout.TextAppearance.Hint
        </item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="errorTextAppearance">@style/Yap.Widget.App.TextInputLayout.TextAppearance.Error
        </item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="Yap.Widget.App.TextInputLayout.TextAppearance.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Yap.Widget.App.TextInputLayout.TextAppearance.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="font">@font/roboto_regular</item>

    </style>

    <style name="Yap.App.Widget.TextInputEditText.UserName" parent="Yap.App.Widget.TextInputEditText">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:maxLength">40</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Yap.App.Widget.TextInputEditText.Email" parent="Yap.App.Widget.TextInputEditText">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:maxLength">40</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="Yap.App.Widget.TextInputEditText.Mobile.Prefix" parent="Yap.App.Widget.TextInputEditText">
        <item name="pse_compoundDrawableHeight">@dimen/_16sdp</item>
        <item name="pse_compoundDrawableWidth">@dimen/_16sdp</item>
        <item name="pse_setPrefix">971</item>
        <item name="pse_setPrefixDrawable">@drawable/flag_ae</item>
        <item name="pse_space">@dimen/margin_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="Yap.App.Widget.NumberKeyboard" parent="AppFontRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/_60sdp</item>
        <item name="android:layout_marginLeft">@dimen/_60sdp</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="Yap.App.Widget.Button.Action" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_65sdp</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_65sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="btn_text_size">@dimen/text_size_h3</item>
        <item name="btn_shape_type">rectangle</item>
        <item name="android:enabled">true</item>
        <item name="android:paddingLeft">@dimen/margin_extra_large</item>
        <item name="android:paddingRight">@dimen/margin_extra_large</item>
        <item name="android:theme">?attr/primaryButtonTheme</item>
        <item name="btn_round_radius">50dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Yap.App.Widget.Button.Action.Small" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_22sdp</item>
        <item name="btn_text_size">@dimen/text_size_h2</item>
        <item name="btn_shape_type">rectangle</item>
        <item name="android:enabled">true</item>
        <item name="android:paddingLeft">@dimen/margin_extra_large</item>
        <item name="android:paddingRight">@dimen/margin_extra_large</item>
        <item name="btn_round_radius">50dp</item>
        <item name="android:theme">?attr/primaryButtonTheme</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Yap.App.Layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Yap.App.Layout.LinearLayout" parent="Yap.App.Layout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Yap.App.Layout.LinearLayout.Horizontal" parent="Yap.App.Layout.LinearLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Yap.App.Layout.LinearLayout.Horizontal.White" parent="Yap.App.Layout.LinearLayout.Horizontal">
        <item name="android:background">@color/white</item>
