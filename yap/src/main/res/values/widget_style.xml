        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Yap.App.Widget.MatchSpinnerTheme" parent="CoreAppTheme">
        <item name="android:dropDownListViewStyle">@style/Yap.App.Widget.MatchSpinnerStyle</item>
