<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="co.yap.translation.Strings" />

        <import type="co.yap.yapcore.managers.MyUserManager" />

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.home.status.NotificationStatusItemViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.vipulasri.timelineview.TimelineView
                android:id="@+id/timeline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:endLineColor="@color/warning"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:linePadding="@dimen/margin_extra_small"
                app:lineStyle="normal"
                app:lineWidth="3dp"
                app:markerSize="@dimen/_16sdp"
                app:startLineColor="@color/grey" />

            <TextView
                android:id="@+id/tvStatusTitle"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36sdp"
                android:gravity="start"
                android:text='@{viewModel.statusDataModel.statusTitle}'
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timeline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStatusDescription"
                style="@style/ASmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36sdp"
                android:layout_marginTop="@dimen/small"
                android:text='@{viewModel.statusDataModel.statusDescription}'
                app:layout_constraintTop_toBottomOf="@id/timeline" />

            <TextView
                android:id="@+id/tvStatusActions"
                style="@style/ASmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_36sdp"
                android:layout_marginTop="@dimen/small"
                android:text='@{viewModel.statusDataModel.statusTitle}'
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintTop_toBottomOf="@id/tvStatusDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>