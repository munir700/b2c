<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.sendmoney.addbeneficiary.viewmodels.BankParamsItemViewModel" />

        <import type="android.view.View" />

        <import type="co.yap.translation.Strings" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_normal"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_large"
            android:text="@{viewModel.bankParams.name}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/screen_bank_details_display_text_bank_name" />

        <EditText
            android:id="@+id/etBankName"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/greyLight"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="50"
            android:text="@{viewModel.bankParams.name}"
            app:hint="@{Strings.screen_bank_details_display_text_bank_name}"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>