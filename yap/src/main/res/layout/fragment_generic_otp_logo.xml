<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.others.otp.GenericOtpLogoViewModel" />

        <import type="co.yap.translation.Strings" />

        <import type="android.view.View" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_medium"
            android:paddingBottom="@dimen/_24sdp"
            tools:context=".modules.onboarding.fragments.PhoneVerificationFragment">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/margin_small"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_store_b2b"
                app:colorType="@{`Beneficiary`}"
                app:fullName="@{viewModel.state.fullName}"
                app:imageUrl="@{viewModel.state.imageUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="@{viewModel.state.position}" />

            <View
                android:id="@+id/barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/ivUserImage"
                app:layout_constraintStart_toStartOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage" />

            <View
                android:id="@+id/barrier2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivUserImage"
                app:layout_constraintStart_toStartOf="@+id/ivUserImage"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage" />

            <RelativeLayout
                android:id="@+id/rlAddNewProfilePic"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/_35sdp"
                android:visibility="@{viewModel.state.flagLayoutVisibility? View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/barrier2"
                app:layout_constraintEnd_toEndOf="@+id/barrier"
                app:layout_constraintTop_toTopOf="@+id/ivUserImage"
                tools:visibility="visible">

                <FrameLayout
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/bg_round_red"
                    android:backgroundTint="@color/white"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/ivAddProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bitmap"
                        app:setFlagDrawable="@{viewModel.state.beneficiaryCountry}"
                        android:contentDescription="@string/empty_string" />

                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitle"
                style="@style/ALarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_normal"
                android:text="@{viewModel.state.verificationTitle}"
                android:textColor="?attr/colorPrimaryDarkAttr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="219dp"
                tools:text="@string/screen_forgot_passcode_otp_display_text_heading" />

            <TextView
                android:id="@+id/textView4"
                style="@style/ASmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:lineSpacingExtra="1dp"
                android:text="@{viewModel.state.verificationDescriptionForLogo}"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintVertical_bias="0.0"
                tools:text="We&apos;ve sent a verification code to \n +971 56 204 7636" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="?attr/colorPrimaryDarkAttr"
                app:bar_enabled="false"
                app:bar_height="@dimen/_2sdp"
                app:height="@dimen/_55sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.137"
                app:length="4"
                app:otp="@={viewModel.state.otp}"
                app:otp_box_background="@drawable/otp_bg"
                app:otp_box_background_active="@drawable/otp_bg_active"
                app:otp_box_background_error="@drawable/otp_bg_error"
                app:otp_box_background_success="@drawable/otp_bg_success"
                app:otp_text_size="@dimen/_24sdp"
                app:requestKeyboard="@{true}"
                app:width="@dimen/_45sdp" />


            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@{viewModel.state.timer}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otp_view" />


            <TextView
                android:id="@+id/button10"
                style="@style/ARegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@null"
                android:enabled="@{viewModel.state.validResend}"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:onClick="@{(v) -> viewModel.handlePressOnResendOTP(v.id)}"
                android:textAllCaps="false"
                android:textColor="@{viewModel.state.color}"
                app:layout_constraintBottom_toTopOf="@+id/done"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTimer"
                app:layout_constraintVertical_bias="0.123"
                app:text="@{Strings.screen_verify_phone_number_button_resend_otp}"
                tools:text="Resend code" />

            <co.yap.widgets.CoreButton
                android:id="@+id/done"
                style="@style/FragmentsBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xxl"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_xxl"
                android:onClick="@{(v) -> viewModel.handlePressOnSendButton(v.id)}"
                android:text="@string/screen_phone_number_button_send"
                app:enableCoreButton="@{viewModel.state.valid}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="44dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>