<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="co.yap.household.dashboard.main.viewmodels.HouseholdDashboardViewModel" />-->
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_round_selector"
        android:elevation="@dimen/_15sdp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_85sdp">

            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/margin_small"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_home_notification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty_string"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_ico_close"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/AMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@+id/ivNotification"
                app:layout_constraintLeft_toRightOf="@+id/ivNotification"
                app:layout_constraintTop_toTopOf="@+id/ivNotification"
                tools:text="YAP service notice." />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/AMicroGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="0sp"
                android:maxLines="3"
                app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
                app:layout_constraintRight_toLeftOf="@+id/ivCross"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                tools:text="On May 24th, International money transfers wonâ€™t be available from 7 p.m. to 11 p.m." />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>