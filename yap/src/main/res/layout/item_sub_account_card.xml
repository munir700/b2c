<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="subAccountCardItemVm"
            type="co.yap.modules.subaccounts.account.card.SubAccountCardItemVM" />

        <import type="co.yap.yapcore.managers.MyUserManager" />

        <import type="co.yap.yapcore.enums.AccountType" />

        <import type="android.view.View" />

        <import type="co.yap.translation.Strings" />
    </data>

    <androidx.cardview.widget.CardView
        style="@style/Yap.App.Layout.CardView"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@{subAccountCardItemVm.position==0?@dimen/_1sdp:@dimen/margin_zero_dp}">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBankTransferType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border_selector"
            android:orientation="vertical"
            android:weightSum="4">
            <!--            android:background="@{subAccountCardItemVm.item.accountType!=null &amp;&amp; AccountType.valueOf(subAccountCardItemVm.item.accountType) == AccountType.B2C_ACCOUNT?@drawable/bg_gray_rounded_border:@drawable/card_border_container}"-->

            <LinearLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:visibility="visible">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/imgProfile"
                style="@style/Yap.App.Widget.ImageView.Circle"
                android:layout_gravity="center"
                android:paddingTop="@dimen/margin_medium"
                android:src="@drawable/ic_add_card"
                app:drawableName="@{subAccountCardItemVm.item.accountType==null? `ic_add_card`:null}"
                app:fullName="@{subAccountCardItemVm.item.accountType!=null &amp;&amp; AccountType.valueOf(subAccountCardItemVm.item.accountType) == AccountType.B2C_ACCOUNT?MyUserManager.INSTANCE.user.currentCustomer.fullName:subAccountCardItemVm.item.fullName}"
                app:imageUrl="@{subAccountCardItemVm.item.accountType!=null &amp;&amp; AccountType.valueOf(subAccountCardItemVm.item.accountType) == AccountType.B2C_ACCOUNT?MyUserManager.INSTANCE.user.currentCustomer.picture:subAccountCardItemVm.item.profilePictureUrl}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_swipe_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/layout_swipe_half_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_62sdp"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_h2"
                    app:text="@{Strings.screen_sub_accounts_profile_display_text_drag_and_drop}"
                    android:text="@string/screen_sub_accounts_profile_display_text_drag_and_drop"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvTitle"
                style="@style/Yap.App.Widget.TextView.Label"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@{subAccountCardItemVm.fullName}"
                android:visibility="@{subAccountCardItemVm.item.accountType == null?View.INVISIBLE:View.VISIBLE}" />

            <TextView
                style="@style/Yap.App.Widget.TextView.FullName"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:text="@{subAccountCardItemVm.item.accountType==null?`Add a new card`:(AccountType.valueOf(subAccountCardItemVm.item.accountType) == AccountType.B2C_ACCOUNT?MyUserManager.INSTANCE.cardBalance.availableBalance:subAccountCardItemVm.subTitle)}"
                android:textSize="@dimen/text_size_h2"
                tools:text="Add a new card"
                android:paddingBottom="@dimen/margin_medium"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</layout>