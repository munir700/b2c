<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="subAccountCardItemVm"
            type="co.yap.modules.subaccounts.account.card.SubAccountCardItemVM" />

    </data>

    <androidx.cardview.widget.CardView
        style="@style/Yap.App.Layout.CardView"
        app:cardElevation="@dimen/margin_zero_dp"
        app:contentPadding="@dimen/margin_zero_dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llBankTransferType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border_container"
            android:orientation="vertical"

            android:paddingStart="@dimen/margin_normal"
            android:paddingTop="@dimen/margin_medium_large"
            android:paddingEnd="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_medium">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/imgProfile"
                style="@style/Yap.App.Widget.ImageView.Circle"
                android:layout_gravity="center"
                android:src="@drawable/ic_store_b2c"
                app:srcCompat="@drawable/ic_store_b2c" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Yap.App.Widget.TextView.Label"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/screen_add_beneficiary_display_text_transfer_type_bank" />

            <TextView
                style="@style/Yap.App.Widget.TextView.FullName"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:text="@string/screen_add_beneficiary_display_text_transfer_type_bank_description"
                android:textSize="@dimen/text_size_h2" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</layout>