<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.addmoney.easybanktransfer.accountlist.AccountListViewModel" />

        <import type="co.yap.translation.Strings" />

        <import type="co.yap.yapcore.R" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.CoreToolbar
            android:id="@+id/toolbarAddAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@{R.drawable.ic_close}"
            app:leftIconVisibility="@{true}"
            app:onClick="@{viewModel::onToolBarClick}"
            app:rightIconVisibility="@{false}"
            app:tint="@color/colorPrimaryDark"
            app:titleTranslator="@{Strings.screen_lean_welcome_screen_title}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectBank"
            style="@style/ATitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarAddAccount"
            app:text="@{Strings.screen_lean_account_list_select_an_account}"
            tools:text="@string/screen_lean_account_list_select_an_account" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChooseBank"
            style="@style/ARegularGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSelectBank"
            app:text="@{Strings.screen_lean_account_list_choose_an_account}"
            tools:text="@string/screen_lean_account_list_choose_an_account" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAccountList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_medium"
            android:adapter="@{viewModel.accountListAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btnLinkAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvChooseBank"
            tools:listitem="@layout/item_account_list_group" />

        <co.yap.widgets.CoreButton
            android:id="@+id/btnLinkAccount"
            style="@style/FragmentsBtnStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:btn_drawable="@drawable/ic_plus_white"
            app:btn_drawable_padding_left="5.5"
            app:btn_drawable_padding_top="2.5"
            app:btn_drawable_position="left"
            app:btn_size="large"
            app:enableCoreButton="@{true}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:text="@{Strings.screen_lean_account_list_link_new_account}"
            tools:text="@string/screen_lean_account_list_link_new_account" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>