<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivYoungLastCard"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_170sdp"
        android:src="@drawable/ic_younglastcard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivYoungThirdCard"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_blueyouncard"
        app:layout_constraintStart_toStartOf="@+id/ivYoungLastCard"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivYoungSecondCard"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_youngmustardcard"
        app:layout_constraintStart_toStartOf="@+id/ivYoungThirdCard"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivYoungFrontCard"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:src="@drawable/ic_youngfrontcard"
        app:layout_constraintStart_toStartOf="@+id/ivYoungSecondCard"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>