<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cardAnalyticsDetailsViewModel"
            type="co.yap.modules.dashboard.cards.analytics.viewmodels.CardAnalyticsDetailsViewModel" />
        <import type="co.yap.sendmoney.R" />

        <import type="co.yap.translation.Strings" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <co.yap.widgets.CoreToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@{R.drawable.ic_back_arrow_left}"
            app:leftIconVisibility="@{true}"
            app:onClick="@{cardAnalyticsDetailsViewModel::onToolBarClick}"
            app:titleString="@{cardAnalyticsDetailsViewModel.state.toolbarTitle}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/tbBtnBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{(v) -> cardAnalyticsDetailsViewModel.handleOnClickEvent(v.id)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_arrow_left"
                tools:ignore="ContentDescription" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_toEndOf="@id/tbBtnBack"
                android:gravity="center"
                android:text="@{cardAnalyticsDetailsViewModel.state.toolbarTitle}"
                android:textColor="@color/colorPrimaryDark"
                tools:text="Shopping" />

        </RelativeLayout>

        <co.yap.widgets.CoreCircularImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:background="@color/light_grey"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_access_alarm" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppFontRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:gravity="center_horizontal"
            android:text="July 2019ãƒ»5 transactions"
            android:textColor="@color/greyDark"
            android:textSize="@dimen/text_size_h2" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppFontRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="AED 600.30"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_h6" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_normal"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
            app:contentPaddingBottom="@dimen/margin_small"
            app:contentPaddingTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_extra_small"
                android:paddingBottom="@dimen/margin_extra_small">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_h4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="monthly spend"
                        android:textColor="@color/greyDark"
                        android:textSize="@dimen/text_size_h1" />
                </LinearLayout>

                <View
                    android:layout_width="0.1sp"
                    android:layout_height="match_parent"
                    android:background="@color/textDarkColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="50%"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_h4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="vs. last month"
                        android:textColor="@color/greyDark"
                        android:textSize="@dimen/text_size_h1" />
                </LinearLayout>

                <View
                    android:layout_width="0.1sp"
                    android:layout_height="match_parent"
                    android:background="@color/textDarkColor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="150"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_h4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/AppFontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="average spend"
                        android:textColor="@color/greyDark"
                        android:textSize="@dimen/text_size_h1" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:lineSpacingExtra="6sp"
            android:text="Transactions"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/line_divider" />

        <co.yap.widgets.MultiStateView
            android:id="@+id/multiStateView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/small"
            android:layout_weight="1"
            app:msv_animateViewChanges="true"
            app:msv_emptyView="@layout/layout_empty_view_no_results"
            app:msv_errorView="@layout/layout_error_view"
            app:msv_loadingView="@layout/layout_loading_view">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                app:adapter="@{cardAnalyticsDetailsViewModel.adapter}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"
                tools:listitem="@layout/item_card_analytics_details" />
        </co.yap.widgets.MultiStateView>

    </LinearLayout>
</layout>