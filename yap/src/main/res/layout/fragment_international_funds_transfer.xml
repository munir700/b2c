<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="co.yap.translation.Strings" />

        <variable
            name="viewModel"
            type="co.yap.modules.yapit.sendmoney.addbeneficiary.viewmodels.BeneficiaryOverviewViewModel" />
    </data>

    <ScrollView
        android:id="@+id/svContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_extra_large"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:src="@drawable/ic_uae_flag"
                app:layout_constraintBottom_toBottomOf="@+id/etAmountLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etAmountLayout" />

            <TextView
                style="@style/Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jonathan Newport"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/etSenderCurrency"
                style="@style/SmallGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AED"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuccessHeading" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etAmountLayout"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/small"
                android:background="@drawable/bg_funds"
                android:paddingStart="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_medium"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName">

                <EditText
                    android:id="@+id/etSenderAmount"
                    style="@style/ATitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etAmount"
                    android:maxLength="7"
                    android:maxLines="1"
                    app:hint="@{Strings.common_amount_hint}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="="
                android:textSize="@dimen/_30sdp" />

            <TextView
                android:id="@+id/etBeneficiaryCurrency"
                style="@style/SmallGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CAD"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuccessHeading" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etBeneficiaryAmountLayout"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:background="@drawable/bg_funds"
                android:paddingStart="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_medium"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName">

                <EditText
                    android:id="@+id/etBeneficiaryConvertedAmount"
                    style="@style/ATitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etAmount"
                    android:maxLength="7"
                    android:maxLines="1"
                    app:hint="@{Strings.common_amount_hint}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_trending" />

                <TextView
                    style="@style/SmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_extra_small"
                    android:textSize="@dimen/text_size_c3"
                    app:text="@{Strings.screen_international_funds_transfer_display_text_yap_rate}"
                    tools:text="@string/screen_international_funds_transfer_display_text_yap_rate" />

                <!--           should make it spanable if required-->

                <TextView
                    style="@style/SmallGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_extra_small"
                    android:text=" X AED to X CAD"
                    android:textSize="@dimen/text_size_c3" />
            </LinearLayout>

            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="left"
                android:text="@string/screen_add_beneficiary_display_text_transfer_type"
                android:textSize="@dimen/_14sdp"
                app:text="@{Strings.screen_international_funds_transfer_display_text_reson}"
                tools:text="@string/screen_international_funds_transfer_display_text_reson" />


            <RelativeLayout
                android:id="@+id/layoutReasonsSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal">

                <Spinner
                    android:id="@+id/reasonsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:drawSelectorOnTop="false"
                    android:dropDownHeight="50dp"
                    android:gravity="bottom"
                    android:overScrollMode="never"
                    android:overlapAnchor="false"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:prompt="@string/screen_international_funds_transfer_dropdown_text_reason_hint"
                    android:spinnerMode="dropdown" />


            </RelativeLayout>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNote"
                style="@style/ARegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="top"
                android:inputType="text"
                android:maxLength="100"
                android:minHeight="@dimen/_40sdp"
                app:hint="@{Strings.screen_international_funds_transfer_input_text_note_hint}"
                app:layout_constraintBottom_toBottomOf="parent" />


            <TextView
                style="@style/SmallGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_extra_small"
                android:gravity="center"
                android:layout_marginTop="@dimen/small"
                android:text="@string/screen_international_funds_transfer_display_text_fee"
                android:textSize="@dimen/text_size_c3" />

            <TextView
                style="@style/SmallGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/margin_extra_small"
                android:gravity="center"
                android:text="@string/screen_international_funds_transfer_display_text_note"
                android:textSize="@dimen/text_size_c3" />

            <co.yap.widgets.CoreButton
                android:id="@+id/next_button"
                style="@style/FragmentsBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_xxl"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:text="@string/common_button_next"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="44dp" />
        </LinearLayout>
    </ScrollView>
</layout>