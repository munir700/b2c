<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.subaccounts.paysalary.entersalaryamount.EnterSalaryAmountVM" />

        <import type="co.yap.yapcore.managers.MyUserManager" />

        <import type="co.yap.translation.Strings" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_normal"
            tools:context=".modules.subaccounts.paysalary.entersalaryamount.EnterSalaryAmountFragment">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_store_b2b"
                app:colorType="@{`Beneficiary`}"
                app:fullName="@{viewModel.mUserLiveData.currentCustomer.fullName}"
                app:imageUrl="@{viewModel.mUserLiveData.currentCustomer.picture}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="@{0}" />

            <TextView
                android:id="@+id/tvFullName"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center"
                android:text="Enter transfer amount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
                tools:text="Enter transfer amount" />

            <TextView
                android:id="@+id/tvCurrency"
                style="@style/AMicroGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="AED"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName"
                tools:text="AED" />

            <co.yap.widgets.EasyMoneyEditText
                android:id="@+id/etLastUsedAmount"
                style="@style/Yap.App.Widget.TextInputEditText.EasyMoney"
                android:layout_marginTop="@dimen/margin_small"
                android:enabled="true"
                android:gravity="center"
                android:minWidth="@dimen/_140sdp"
                android:textAlignment="center"
                app:amount_drawable="@drawable/bg_funds"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrency" />

            <TextView
                android:id="@+id/tvAvailableBalance"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:gravity="center"
                android:text="@{String.format(@string/screen_cash_transfer_display_text_available_balance,MyUserManager.INSTANCE.cardBalance.availableBalance)}"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etLastUsedAmount"
                tools:text="Your available balance is " />

            <co.yap.widgets.EasyMoneyEditText
                android:id="@+id/tvLastUsedAmount"
                style="@style/Yap.App.Widget.TextInputEditText.EasyMoney.Suggestion"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:enabled="false"
                android:gravity="center"
                android:text="3112312"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAvailableBalance" />

            <TextView
                android:id="@+id/tvLastUsedAmountGuide"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:gravity="center"
                android:text="Use last transfer payment amount"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLastUsedAmount"
                tools:text="Use last transfer payment amount" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbOutTransFilter"
                style="@style/Yap.App.Widget.CheckBox"
                android:layout_marginTop="@dimen/_18sdp"

                android:text="Set this salary transfer up as a recurring payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLastUsedAmountGuide" />

            <co.yap.widgets.CoreButton
                android:id="@+id/btnConfirm"
                style="@style/FragmentsBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/margin_xxl"

                android:text="Confirm"
                app:btn_enable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cbOutTransFilter"
                app:layout_constraintVertical_bias="0.958"
                tools:text="Add" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>