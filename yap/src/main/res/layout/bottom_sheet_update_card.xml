<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="co.yap.translation.Strings" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUpdateProfilePotoTitle"
            style="@style/Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:paddingTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_extra_small"
            android:text="@string/screen_update_profile_photo_display_text_title"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:layout_marginBottom="@dimen/margin_normal_large"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tvOpenCamera"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:drawableStart="@drawable/ic_camera"
            android:drawablePadding="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal_large"
            android:paddingBottom="@dimen/margin_normal_large"
            android:text="@string/screen_update_profile_photo_display_text_open_camera"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:layout_marginBottom="@dimen/margin_normal_large"
            android:background="@color/divider" />


        <TextView
            android:id="@+id/tvChoosePhoto"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:drawableStart="@drawable/ic_choose_photo"
            android:drawablePadding="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal_large"
            android:paddingBottom="@dimen/margin_normal_large"
            android:text="@string/screen_update_profile_photo_display_text_choose_photo"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/margin_normal_large"
            />


    </LinearLayout>
</layout>