    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal">

        <RelativeLayout
            android:id="@+id/rlPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:background="@color/white"
            android:gravity="center|center_vertical|center_horizontal">

            <TextView
                android:id="@+id/tvAccountHolderNameInitials"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_round_red"
                android:backgroundTint="#D8F6F3"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:maxLength="2"
                android:text="@{StringUtils.INSTANCE.getInitials(viewModel.state.name)}"
                android:textColor="@color/colorSecondaryGreen"
                android:textSize="@dimen/_24sdp" />

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:contentDescription="@string/app_name"
                android:visibility="invisible"
                app:src="@{viewModel.state.picture}" />

            <!--
               toggle visibility on the basis of transfer type
                 -->

            <RelativeLayout
                android:id="@+id/rlAddNewProfilePic"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-5dp"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/bg_round_red"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:id="@+id/ivAddProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bitmap" />

                </FrameLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

