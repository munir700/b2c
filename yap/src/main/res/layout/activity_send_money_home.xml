<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.sendmoney.viewmodels.SendMoneyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_send_money_home_toolbar"
            android:visibility="@{viewModel.state.toolbarVisibility? View.VISIBLE:View.GONE}"
            app:viewModel="@{viewModel}" />

        <fragment
            android:id="@+id/send_money_nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight="1"
            app:defaultNavHost="true"
            app:navGraph="@navigation/send_money_main_navigation" />

    </LinearLayout>
</layout>