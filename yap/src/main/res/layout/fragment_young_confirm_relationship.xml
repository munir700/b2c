<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="yConfirmRelationshipViewModel"
            type="co.yap.modules.dashboard.store.young.confirmrelationship.YoungConfirmRelationshipVM" />

        <import type="co.yap.translation.Strings" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvConfirmRelation"
            style="@style/Yap.App.Widget.TextView.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:gravity="center"
            android:text="Please confirm your relationship with Lina"
            android:textColor="@color/colorPurpleGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <co.yap.widgets.CollapsedColoredHintTextInputLayout
            android:id="@+id/ctEmailEdit"
            style="@style/Yap.App.Widget.TextInputLayout"
            android:layout_marginStart="@dimen/margin_medium_large"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/margin_medium_large"
            android:hint="@string/screen_yap_house_hold_user_info_display_text_email"
            app:layout_constraintTop_toBottomOf="@+id/tvConfirmRelation"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/Yap.App.Widget.TextInputEditText.Email"
                android:hint="@string/screen_yap_house_hold_user_info_display_text_email_hint"
                android:paddingTop="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                android:drawableEnd="@drawable/ccp_ic_arrow_drop_down"
                android:drawableTint="@color/colorPrimary"
                android:text="@={yConfirmRelationshipViewModel.state.email}"
                app:validateType='@{"email"}' />
        </co.yap.widgets.CollapsedColoredHintTextInputLayout>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/ctEmailEdit"
            app:layout_constraintEnd_toEndOf="@+id/ctEmailEdit"
            app:layout_constraintTop_toBottomOf="@+id/ctEmailEdit"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="fmlefrmefm"
            />
        <co.yap.widgets.CoreButton
            android:id="@+id/btnNext"
            style="@style/FragmentsBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_79sdp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginEnd="@dimen/_79sdp"
            android:layout_marginBottom="@dimen/margin_medium_large"
            android:onClick="@{(v)-> yConfirmRelationshipViewModel.handlePressOnView(v.id)}"
            android:text="@string/common_button_next"
            app:enableCoreButton="@{yConfirmRelationshipViewModel.validator.isValidate}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:text="@{Strings.screen_phone_number_button_send}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
