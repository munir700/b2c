<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.addmoney.easybanktransfer.topup.topupamount.TopupAmountViewModel" />

        <import type="co.yap.translation.Strings" />
        <import type="co.yap.yapcore.R" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.CoreToolbar
            android:id="@+id/toolbarAddAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@{R.drawable.ic_back_arrow_left_gery}"
            app:leftIconVisibility="@{true}"
            app:onClick="@{viewModel::onToolBarClick}"
            app:rightIconVisibility="@{false}"
            app:tint="@color/colorPrimaryDark"
            app:titleTranslator="@{Strings.screen_lean_topup_amount_toolbar_title}" />

<!--           To be changed when topup model class is available-->
<!--        app:bgColor="@{viewModel.item.backgroundColor}"-->
<!--        app:fullName="@{viewModel.item.name}"-->
<!--        app:imageSize="@{R.dimen._64sdp}"-->
<!--        app:imageUrl="@{viewModel.item.logo}"-->
<!--        app:initialTextColor="@{R.color.white}"-->
<!--        app:initialTextSize="@{R.dimen.text_size_h4}"-->

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBankIcon"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:contentDescription="@string/empty_string"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/ic_bank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarAddAccount" />

        <!--           To be changed when topup model class is available-->
<!--        android:text="@{viewModel.topupModel.bankAccountType}"-->
        <TextView
            android:id="@+id/tvCurrentAccount"
            style="@style/ALarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_large"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Current Account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBankIcon"
            tools:text="Current Account" />

        <TextView
            android:id="@+id/tvEnterTopUpAmount"
            style="@style/Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentAccount"
            app:text="@{Strings.screen_lean_topup_text_enter_amount_to_topup}"
            tools:text="Enter the amount to top up" />

        <!--           To be changed when topup model class is available-->
<!--        android:text="@{viewModel.topupModel.currencyType}"-->
        <TextView
            android:id="@+id/tvCurrency"
            style="@style/AMicroGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterTopUpAmount"
            android:text="AED"
            tools:text="AED" />

        <co.yap.widgets.EasyMoneyEditText
            android:id="@+id/etAmount"
            style="@style/ATitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrency"
            tools:text="1234567891" />

        <TextView
            android:id="@+id/tvDominationFirstAmount"
            style="@style/Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_55sdp"
            android:layout_weight="3"
            android:background="@drawable/bg_round_denominations"
            android:gravity="center"
            android:paddingStart="@dimen/small"
            android:paddingEnd="@dimen/small"
            android:paddingTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_extra_small"
            android:text="@{viewModel.state.denominationFirstAmount}"
            android:textColor="?attr/colorPrimaryAttr"
            app:layout_constraintBottom_toBottomOf="@+id/tvDominationSecondAmount"
            app:layout_constraintEnd_toStartOf="@+id/tvDominationSecondAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDominationSecondAmount"
            tools:text="+100" />

        <TextView
            android:id="@+id/tvDominationSecondAmount"
            style="@style/Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_weight="3"
            android:minWidth="@dimen/_55sdp"
            android:background="@drawable/bg_round_denominations"
            android:gravity="center"
            android:paddingStart="@dimen/small"
            android:paddingEnd="@dimen/small"
            android:paddingTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_extra_small"
            android:text="@{viewModel.state.denominationSecondAmount}"
            android:textColor="?attr/colorPrimaryAttr"
            app:layout_constraintEnd_toStartOf="@+id/tvDominationThirdAmount"
            app:layout_constraintStart_toEndOf="@+id/tvDominationFirstAmount"
            app:layout_constraintTop_toBottomOf="@+id/etAmount"
            tools:text="+500" />

        <TextView
            android:id="@+id/tvDominationThirdAmount"
            style="@style/Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bg_round_denominations"
            android:gravity="center"
            android:minWidth="@dimen/_55sdp"
            android:paddingStart="@dimen/small"
            android:paddingEnd="@dimen/small"
            android:paddingTop="@dimen/margin_extra_small"
            android:paddingBottom="@dimen/margin_extra_small"
            android:text="@{viewModel.state.denominationThirdAmount}"
            android:textColor="?attr/colorPrimaryAttr"
            app:layout_constraintBottom_toBottomOf="@+id/tvDominationSecondAmount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDominationSecondAmount"
            app:layout_constraintTop_toTopOf="@+id/tvDominationSecondAmount"
            tools:text="+1000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAvailableBalanceGuide"
            style="@style/MicroGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/tvDominationSecondAmount"
            android:text="@{viewModel.state.availableBalance}"
            tools:text="Your available balance is AED 2022" />

        <co.yap.widgets.CoreButton
            android:id="@+id/btnAction"
            style="@style/FragmentsBtnStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_extra_large"
            app:text="@{Strings.common_button_next}"
            app:btn_size="small"
            app:enableCoreButton="@{viewModel.state.valid}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.958"
            tools:text="Next" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>