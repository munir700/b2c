<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.cards.home.viewmodels.YapCardItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgShortcut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cardview_compat_inset_shadow"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/round_bg_shadow"
            android:contentDescription="@string/empty_string"
            android:elevation="@dimen/_1sdp"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_add_sign"
            android:translationZ="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            style="@style/AMicro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Add money"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgShortcut"
            app:layout_constraintStart_toStartOf="@+id/imgShortcut"
            app:layout_constraintTop_toBottomOf="@+id/imgShortcut"
            tools:text="Add money" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>