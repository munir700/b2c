<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.subaccounts.paysalary.subscription.SubscriptionVM" />

        <import type="co.yap.yapcore.managers.MyUserManager" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium"
        tools:context=".modules.subaccounts.paysalary.subscription.SubscriptionFragment">

        <co.yap.widgets.CoreCircularImageView
            android:id="@+id/ivUserImage"
            style="@style/Yap.App.Widget.ImageView.Circle"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/ic_store_b2b"
            app:colorType="@{`Beneficiary`}"
            app:fullName="@{MyUserManager.INSTANCE.user.currentCustomer.fullName}"
            app:imageUrl="@{MyUserManager.INSTANCE.user.currentCustomer.picture}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:position="@{0}" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swAutoRenewal"
            style="@style/Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:paddingTop="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:checked="@{viewModel.state.subscriptionResponseModel.isAutoRenew}"
            android:onClick="@{(v)->viewModel.setUpSubscription()}"
            android:text="Automatic renewal"
            android:theme="@style/CustomSwitch" />

        <include
            layout="@layout/layout_horizontal_text_views"

            app:title="@{`Name`}"
            app:value="@{MyUserManager.INSTANCE.user.currentCustomer.fullName}" />

        <include
            layout="@layout/layout_horizontal_text_views"
            app:title="@{`Start date`}"
            app:value="@{viewModel.state.subscriptionResponseModel.startDate}" />

        <include
            layout="@layout/layout_horizontal_text_views"
            app:title="@{`End date`}"
            app:value="@{viewModel.state.subscriptionResponseModel.endDate}" />

        <include
            layout="@layout/layout_horizontal_text_views"

            app:title="@{`Plan type`}"
            app:value="@{viewModel.state.subscriptionResponseModel.planType}" />


        <include
            layout="@layout/layout_horizontal_text_views"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:title="@{`Cost`}"
            app:value="@{viewModel.state.subscriptionResponseModel.price}" />

        <co.yap.widgets.CoreButton
            android:id="@+id/btnConfirm"
            style="@style/FragmentsBtnStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center"
            android:onClick="@{(v)->viewModel.handlePressOnClick(context)}"
            android:paddingStart="@dimen/margin_extra_large"
            android:paddingEnd="@dimen/margin_extra_large"
            android:text="Cancel subscription"
            app:btn_enable="true"
            tools:text="Add" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>