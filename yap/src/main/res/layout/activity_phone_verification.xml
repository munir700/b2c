<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="co.yap.translation.Strings"/>

        <variable
            name="viewModel"
            type="co.yap.modules.onboarding.viewmodels.PhoneVerificationSignInViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_24sdp"
        tools:context=".modules.onboarding.fragments.PhoneVerificationFragment">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ATitle3"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            tools:text="Verify your mobile number"
            app:text="@{Strings.screen_verify_phone_number_display_text_title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/ASmallGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="We&apos;ve sent a verification code to +971 56 204 7636"
            app:text="@{Strings.screen_verify_phone_number_display_text_sub_title}"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"/>

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/vOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            app:height="@dimen/_65sdp"
            app:width="@dimen/_45sdp"
            app:bar_enabled="false"
            app:bar_height="@dimen/_2sdp"
            app:length="4"
            app:otp=""
            app:otp_text_size="@dimen/_24sdp"
            app:otp_box_background="@drawable/otp_bg"
            app:otp_box_background_active="@drawable/otp_bg_active"
            app:otp_box_background_error="@drawable/otp_bg_error"
            app:otp_box_background_success="@drawable/otp_bg_success"
            app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_24sdp"/>

        <Button
            android:id="@+id/btnResendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ARegular"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:gravity="center"
            tools:text="Resend code"
            app:text="@{Strings.screen_verify_phone_number_button_resend_otp}"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/vOtp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <co.yap.widgets.CoreButton
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:layout_gravity="center_horizontal"
            style="@style/RectangleBtnStyle"
            android:textColor="@color/colorWhite"
            app:text="@{Strings.screen_verify_phone_number_button_send}"
            android:layout_margin="@dimen/_10sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnResendOtp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:onClick="@{(v) -> viewModel.handlePressOnSendButton()}"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>