<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.topup.topupbankdetails.TopUpBankDetailsViewModel" />

        <import type="co.yap.yapcore.managers.MyUserManager" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFullNameHeading"
            style="@style/SmallGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Pay to"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pay to" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFullName"
            style="@style/Yap.App.Widget.TextInputEditText"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="50"
            android:text="@{MyUserManager.INSTANCE.getUser().currentCustomer.fullName}"
            tools:text="Sufyan Shabbir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFullNameHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIBanHeading"
            style="@style/SmallGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="IBAN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFullName"
            tools:text="IBAN" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIBan"
            style="@style/Yap.App.Widget.TextInputEditText"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="50"
            android:text="@{MyUserManager.INSTANCE.getUser().iban}"
            tools:text="1234567897877"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIBanHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSwiftCodeHeading"
            style="@style/SmallGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Swift/BIC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIBan"
            tools:text="Swift/BIC" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSwiftCode"
            style="@style/Yap.App.Widget.TextInputEditText"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="50"
            android:text="@{MyUserManager.INSTANCE.getUser().bank.swiftCode}"
            tools:text="QR135336DA4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSwiftCodeHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAccountNoHeading"
            style="@style/SmallGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="Account number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSwiftCode"
            tools:text="Account number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAccountNo"
            style="@style/Yap.App.Widget.TextInputEditText"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:maxLength="50"
            android:text="@{MyUserManager.INSTANCE.getUser().accountNo}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccountNoHeading"
            tools:text="123456789012" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>