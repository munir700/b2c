<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="co.yap.translation.Strings" />

        <variable
            name="viewModel"
            type="co.yap.modules.yapit.sendmoney.addbeneficiary.viewmodels.TransferTypeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp">

        <TextView
            style="@style/Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="@string/screen_topup_type_selection_display_text_heading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSuccessHeading"
            tools:text="@string/screen_topup_type_selection_display_text_heading" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_39sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/llBankTransferType"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@drawable/card_border_selector"
                android:clickable="true"
                android:onClick="@{(v) -> viewModel.handlePressOnTypeBankTransfer(v.id)}"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_medium">

                <FrameLayout
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/bg_round_purple">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bank" />

                </FrameLayout>


                <TextView
                    android:id="@+id/tvBankTransferTitle"
                    style="@style/Micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:text="@string/screen_topup_type_selection_button_bank_transfer"
                    android:textSize="@dimen/text_size_c3"
                    app:text="@{Strings.screen_topup_type_selection_button_bank_transfer}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCardsTransferType"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:background="@drawable/card_border_selector"
                android:clickable="true"
                android:onClick="@{(v) -> viewModel.handlePressOnTypeCashPickUp(v.id)}"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_medium">

                <FrameLayout
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/bg_round_purple">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bank" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvCardsTitle"
                    style="@style/Micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:text="@string/screen_topup_type_selection_button_card"
                    android:textSize="@dimen/text_size_c3"
                    app:text="@{Strings.screen_topup_type_selection_button_card}" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
