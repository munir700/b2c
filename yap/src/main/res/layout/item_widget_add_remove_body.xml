<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widgetChildItemVM"
            type="co.yap.modules.dashboard.widgets.WidgetChildItemVM" />

        <import type="co.yap.translation.Strings" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_normal"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_normal">

        <co.yap.widgets.CoreCircularImageView
            android:id="@+id/ivWidget"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/bg_round_purple_enabled"
            android:padding="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_add_sign" />

        <TextView
            android:id="@+id/tvWidgetName"
            style="@style/ASmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:singleLine="true"
            android:text="@{widgetChildItemVM.item.title}"
            android:textColor="@color/colorMidnightExpress"
            app:layout_constraintBottom_toBottomOf="@+id/ivWidget"
            app:layout_constraintEnd_toStartOf="@+id/image"
            app:layout_constraintStart_toEndOf="@+id/ivWidget"
            app:layout_constraintTop_toTopOf="@+id/ivWidget"
            tools:text="@string/screen_dashboard_widget_edit_hide_text" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_sign"
            app:layout_constraintBottom_toBottomOf="@+id/ivWidget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivWidget" />

    </androidx.constraintlayout.widget.ConstraintLayout><!--
        android:src="@{viewModel.beneficiary.userType.equals(`Y2Y`)?@drawable/ic_package_standered : null}"
    -->
</layout>

