<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.topup.topupcards.list.TopUpItemViewModel" />

        <import type="android.view.View" />

        <import type="co.yap.yapcore.helpers.Utils" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.CorePaymentCard
            android:id="@+id/paymentCard"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> viewModel.handlePressOnView(v)}"
            app:cardExpiry="@{viewModel.cardInfo.expiry}"
            app:cardNickname="@{viewModel.cardInfo.alias}"
            app:cardNumber="@{viewModel.cardInfo.number}"
            app:card_background="@drawable/bg_gradient_master_card"
            app:card_type="@drawable/ic_visa_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgStatus"
            tools:src="@drawable/ic_status_expired"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_margin="@dimen/_5sdp"
            android:contentDescription="@string/empty_string"
            android:visibility="visible"
            app:cardStatus="@{viewModel.cardInfo}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.90"
            app:layout_constraintStart_toStartOf="@+id/imgCard"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>