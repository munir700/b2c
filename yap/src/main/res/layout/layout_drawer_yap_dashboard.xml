<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Left Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_large"
            android:paddingEnd="0dp"
            android:layout_marginTop="@dimen/margin_xl"
            android:layout_height="match_parent">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:minHeight="150dp"
                android:orientation="vertical">


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greyLight"
                android:layout_height="@dimen/_1sdp"/>

            <!-- Management -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/gift}"
                    app:title='@{"Refer A Friend"}'/>

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/house}"
                    app:title='@{"Household Salary"}'/>

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/mode}"
                    app:title='@{"Yap Young"}'/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greyLight"
                android:layout_height="@dimen/_1sdp"/>

            <!-- Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/notification}"
                    app:title='@{"Alerts and notifications"}'/>

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/file}"
                    app:title='@{"Statements"}'/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/greyLight"
                android:layout_height="@dimen/_1sdp"/>

            <!-- Support -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/phone}"
                    app:title='@{"Contact Us"}'/>

                <include
                    layout="@layout/layout_item_icon_text"
                    app:icon="@{@drawable/support}"
                    app:title='@{"Help and support"}'/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/greyLight"
            android:layout_height="match_parent"/>

        <!-- Right Section -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_marginTop="@dimen/margin_xl"
            android:paddingBottom="@dimen/margin_normal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvUserInitials"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="@dimen/_43sdp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="NH"
                android:maxLength="2"
                android:textColor="@color/white"
                style="@style/ASmall"/>

            <ImageView
                android:layout_below="@id/tvUserInitials"
                android:src="@drawable/ic_add_account"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"/>

            <ImageView
                android:src="@drawable/settings"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

        </RelativeLayout>

    </LinearLayout>
</layout>