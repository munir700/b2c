<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.addionalinfo.viewmodels.AdditionalInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xxxl"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_xxxl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sv_animationType="Line"
            app:sv_doneCircleColor="@color/colorPrimary"
            app:sv_doneStepLineColor="@color/colorPrimaryDark"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_nextStepCircleColor="@color/colorPrimaryDark"
            app:sv_nextStepCircleEnabled="true"
            app:sv_nextStepLineColor="@color/colorPrimaryDarkFadedLight"
            app:sv_selectedCircleRadius="@dimen/_16sdp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_stepLineWidth="@dimen/_1sdp"
            app:sv_stepNumberTextSize="@dimen/_12sdp"
            app:sv_stepsNumber="3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/ATitle3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_normal_large"
            android:gravity="center"
            android:text="Additional Information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step_view"
            tools:text="Additional Information" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubTitle"
            style="@style/RegularGrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:layout_marginEnd="@dimen/margin_normal_large"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:text="You have successfully uploaded your documents. Please click Next to continue" />

        <fragment
            android:id="@+id/additional_info_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
            app:navGraph="@navigation/additional_info_navigation" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>