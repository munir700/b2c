<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.subaccounts.paysalary.profile.cardholderprofile.HHProfileVM" />

        <import type="co.yap.yapcore.managers.MyUserManager" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_medium"
        tools:context=".modules.subaccounts.paysalary.profile.cardholderprofile.HHProfileFragment">

        <co.yap.widgets.CoreCircularImageView
            android:id="@+id/ivUserImage"
            android:layout_width="@dimen/_62sdp"
            android:layout_height="@dimen/_62sdp"
            android:contentDescription="@string/empty_string"
            android:src="@drawable/ic_store_b2b"
            app:colorType="@{`Beneficiary`}"
            app:fullName="@{MyUserManager.INSTANCE.user.currentCustomer.fullName}"
            app:imageUrl="@{MyUserManager.INSTANCE.user.currentCustomer.picture}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:position="@{0}" />

        <include
            android:id="@+id/layoutName"
            layout="@layout/layout_horizontal_text_views"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
            app:title="@{`Name`}"
            app:value="@{MyUserManager.INSTANCE.user.currentCustomer.fullName}" />

        <include
            android:id="@+id/layoutContact"
            layout="@layout/layout_horizontal_text_views"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutName"
            app:title="@{`Contact number`}"
            app:value="@{MyUserManager.INSTANCE.user.currentCustomer.getFormattedPhoneNumber(context)}" />

        <include
            android:id="@+id/layoutEmail"
            layout="@layout/layout_horizontal_text_views"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutContact"
            app:title="@{`Email address`}"
            app:value="@{MyUserManager.INSTANCE.user.currentCustomer.email}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>