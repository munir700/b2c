<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.sendmoney.landing.viewmodels.SendMoneyDashboardViewModel" />

        <import type="co.yap.R" />
        <import type="android.view.View" />
        <import type="co.yap.translation.Strings" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.yap.widgets.CoreToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftIcon="@{R.drawable.ic_closeicon}"
            app:leftIconVisibility="@{true}"
            app:onClick="@{viewModel::onToolBarClick}"
            app:rightIcon="@{R.drawable.ic_iconprofile}"
            app:rightIconVisibility="@{viewModel.state.rightIconVisibility}"
            app:rightTitle="@{viewModel.state.rightButtonText}"
            app:rightTitleVisibility="@{viewModel.state.rightButtonTextVisibility}"
            app:titleString="@{viewModel.state.toolbarTitle}"
            app:titleVisibility="@{!viewModel.state.toolbarTitle.isEmpty()}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_normal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:text="@{Strings.screen_fragment_yap_it_add_money_how_do_you_want_to_add_money}"
            tools:text="@string/screen_fragment_yap_it_send_money_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvrecentTransfer"
            style="@style/SmallGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{Strings.screen_send_money_display_text_recent_transfer}"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="@string/screen_send_money_display_text_recent_transfer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/showrecentext"
            style="@style/SmallGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_large"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/tvrecentTransfer"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:text="@{Strings.screen_send_show_recent}"
            tools:text="@string/screen_send_show_recent" />

        <ViewStub
            android:id="@+id/vsRecentBeneficiaries"
            android:inflatedId="@+id/content_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showrecentext"
            android:layout="@layout/layout_recent_beneficiaries_recylcerview"
            app:adaptor="@{viewModel.recentsAdapter}"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal_large"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showrecentext"
            android:visibility="gone"
            tools:itemCount="3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentBeneficiaries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal_large"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/showrecentext"
            tools:itemCount="3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOptions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_small"
            android:dividerHeight="2dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvRecentBeneficiaries"
            app:recycleViewAdapter="@{viewModel.dashboardAdapter}"
            app:spanCount="2"
            tools:itemCount="7"
            tools:listitem="@layout/item_yap_it_send_money_landing" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>