<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="receiptViewModel"
            type="co.yap.modules.dashboard.transaction.viewmodels.TransactionDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clReciptParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vLine">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clReciptIcon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_normal_large"
            android:background="@drawable/bg_round_purple_enabled"
            android:contentDescription="@string/empty_string"
            android:onClick="@{(v)-> receiptViewModel.handlePressOnEditNoteClickEvent(v.id)}"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_recipt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clRecipt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:onClick="@{(v)-> receiptViewModel.handlePressOnEditNoteClickEvent(v.id)}"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/clReciptIcon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clReciptIcon">

            <TextView
                android:id="@+id/tvReciptHeading"
                style="@style/Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a receipt"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReciptDetails"
                style="@style/AMicroGrey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:text="Keep track of your spendings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvReciptHeading"
                app:layout_constraintTop_toBottomOf="@+id/tvReciptHeading"
                tools:text="transaction notes" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal"
            app:adapter="@{receiptViewModel.adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/clRecipt"
            app:layout_constraintTop_toBottomOf="@+id/clRecipt"
            tools:itemCount="3"
            tools:listitem="@layout/item_transection_recipt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>