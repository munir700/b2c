<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.transaction_note.viewmodels.TransactionNoteViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            app:viewModel="@{viewModel}"
            layout="@layout/layout_transaction_note_toolbar" />
        <View
            android:id="@+id/vLine"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/greyLight"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <com.google.android.material.textfield.TextInputEditText
            style="@style/ARegular"
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_normal_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_normal_large"
            android:hint="Type Something...sadsadsadasdasdasdasdasd asdasdsadad asdasdsadsa adasda"
            android:gravity="top"
            android:focusable="true"
            android:text="@={viewModel.state.noteValue}"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/vLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:inputType="text"
            android:maxLength="150" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>