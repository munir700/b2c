<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.more.yapforyou.viewmodels.YAPForYouItemViewModel" />

        <import type="co.yap.translation.Strings" />

        <import type="android.view.View" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/cornor_edges_gery"
        android:padding="@dimen/margin_medium">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/_43sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/empty_string"
            android:padding="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/greyDark"
            tools:src="@drawable/ic_notification" />


        <TextView
            android:id="@+id/tvTitle"
            style="@style/ASmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="@{viewModel.achievements.title}"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon"
            tools:text="android:asdasdas" />

        <TextView
            android:id="@+id/tvPercentage"
            style="@style/AMicroGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            app:concatenatedVal="@{viewModel.achievements.percentage}"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:textVal="@{Strings.screen_yap_for_you_display_text_completed_percentage}"
            tools:text="75% completed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>