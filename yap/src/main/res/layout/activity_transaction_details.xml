<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.transaction.viewmodels.TransactionDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_transaction_details_toolbar"
            app:viewModel="@{viewModel}" />

        <TextView
            android:id="@+id/tvTransactionHeading"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            style="@style/Large"
            android:padding="@dimen/margin_extra_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Transaction Details"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTransactionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greySoftSelected"
            android:paddingTop="@dimen/margin_extra_large"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_extra_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTransactionHeading">

            <TextView
                android:id="@+id/tvCardType"
                style="@style/ASmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metal card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCardNumber"
                style="@style/ASmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*6901"
                app:layout_constraintBottom_toBottomOf="@+id/tvCardType"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCardType" />

            <TextView
                android:id="@+id/tvCardSpent"
                style="@style/ASmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Spent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCardType" />

            <TextView
                android:id="@+id/tvCardSpendAmount"
                style="@style/ASmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500"
                app:layout_constraintBottom_toBottomOf="@+id/tvCardSpent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCardSpent" />

            <TextView
                android:id="@+id/tvFee"
                style="@style/ASmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="Fee"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCardSpent" />

            <TextView
                android:id="@+id/tvFeeAmount"
                style="@style/ASmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500"
                app:layout_constraintBottom_toBottomOf="@+id/tvFee"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvFee" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clEditIcon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_large"
            app:layout_constraintTop_toBottomOf="@+id/clTransactionDetails"
            android:background="@drawable/bg_round_purple">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/clEditIcon"
            app:layout_constraintLeft_toRightOf="@+id/clEditIcon"
            app:layout_constraintBottom_toBottomOf="@+id/clEditIcon"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            >
        <TextView
            android:id="@+id/tvNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Small"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/tvNoteDetails"
            android:text="Add a note"/>
        <TextView
            android:id="@+id/tvNoteDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AMicroGrey"
            app:layout_constraintTop_toBottomOf="@+id/tvNoteHeading"
            app:layout_constraintLeft_toLeftOf="@+id/tvNoteHeading"
            android:text="Stay organized by adding transaction notes"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>