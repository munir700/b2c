<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="co.yap.modules.dashboard.yapit.sendmoney.addbeneficiary.viewmodels.CashTransferViewModel" />

        <import type="co.yap.yapcore.helpers.Utils" />

        <import type="android.view.View" />

        <import type="co.yap.translation.Strings" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/clFTSnackbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:rotation="180"
                app:layout_constraintTop_toTopOf="parent" />

            <!--     <LinearLayout
                     android:id="@+id/lnUserImage"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/margin_medium_large"
                     app:layout_constraintLeft_toLeftOf="parent"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintTop_toTopOf="parent">

                     <include
                         android:id="@+id/lyUserImage"
                         layout="@layout/layout_y_to_y_transfer_initial_image"
                         app:image="@{viewModel.state.imageUrl}"
                         app:name="@{viewModel.state.fullName}" />
                 </LinearLayout>-->

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_store_b2b"
                app:colorType="@{`Beneficiary`}"
                app:fullName="@{viewModel.state.fullName}"
                app:imageUrl="@{viewModel.state.imageUrl}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:position="@{viewModel.state.position}" />


            <TextView
                android:id="@+id/tvFullName"
                style="@style/Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@{viewModel.state.fullName}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
                tools:text="Jonathan Newport" />

            <TextView
                android:id="@+id/tvIban"
                style="@style/AMicroGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:text="@{viewModel.state.ibanNumber}"
                android:visibility="@{viewModel.state.ibanVisibility? View.VISIBLE:View.GONE}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName"
                tools:text="AE 1234543112341234" />

            <!--  <co.yap.widgets.CoreCircularImageView
                  android:id="@+id/ivFlag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/margin_medium_large"
                  android:src="@drawable/ic_uae_flag"
                  app:layout_constraintBottom_toBottomOf="@+id/etAmountLayout"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toTopOf="@+id/etAmountLayout" />

              <TextView
                  android:id="@+id/tvCurrencyType"
                  style="@style/ATitle2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/small"
                  app:layout_constraintBottom_toBottomOf="@+id/ivFlag"
                  app:layout_constraintLeft_toRightOf="@+id/ivFlag"
                  app:layout_constraintTop_toTopOf="@+id/ivFlag"
                  app:text="@{Strings.common_text_currency_type}"
                  tools:text="@string/common_text_currency_type"

                  />-->

            <TextView
                android:id="@+id/tvCurrency"
                style="@style/AMicroGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@{viewModel.state.currencyType}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIban"
                tools:text="AED" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etAmountLayout"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@{viewModel.state.amountBackground}"
                android:paddingStart="@dimen/margin_medium"
                android:paddingEnd="@dimen/margin_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrency"
                tools:background="@drawable/bg_funds">

                <EditText
                    android:id="@+id/etAmount"
                    style="@style/ATitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etAmount"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:text="@={viewModel.state.amount}"
                    app:hint="@{Strings.common_amount_hint}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvAvailableBalanceGuide"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:gravity="center"
                android:text="@{viewModel.state.feeAmountSpannableString}"
                android:textAlignment="center"
                android:visibility="@{viewModel.state.feeStringVisibility?View.VISIBLE:View.GONE}"
                app:layout_constraintTop_toBottomOf="@+id/etAmountLayout"
                tools:text="Your available balance is " />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:maxLength="@integer/note_max_length"
                android:singleLine="true"
                android:text="@={viewModel.state.noteValue}"
                app:hint="@{Strings.screen_y2y_funds_transfer_display_text_note_placeholder}"
                app:layout_constraintTop_toBottomOf="@+id/tvAvailableBalanceGuide"
                tools:hint="Type a note here" />

            <co.yap.widgets.CoreButton
                android:id="@+id/btnConfirm"
                style="@style/RectangleBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/margin_xxl"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:onClick="@{(v)-> viewModel.handlePressOnView(v.id)}"
                app:enableCoreButton="@{viewModel.state.valid}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNote"
                app:layout_constraintVertical_bias="0.987"
                app:text="@{Strings.screen_yap_to_yap_transfer_display_text_button}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>