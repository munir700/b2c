<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/kyc_navigation"
            app:startDestination="@id/MapDetailViewFragment">

    <fragment
        android:id="@+id/KYCHomeFragment"
        tools:layout="@layout/fragment_kyc_home"
        android:name="co.yap.modules.kyc.fragments.KYCHomeFragment"
        android:label="KYCHomeFragment"/>


    <fragment
        android:id="@+id/AddressSelectionFragment"
        tools:layout="@layout/fragment_address_selection"
        android:name="co.yap.modules.kyc.fragments.AddressSelectionFragment"
        android:label="AddressSelectionFragment">
        <action
            android:id="@+id/action_AddressSelectionFragment_to_KYCHomeFragment"
            app:destination="@id/KYCHomeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/MapDetailViewFragment"
        tools:layout="@layout/fragment_map_detail"
        android:name="co.yap.modules.kyc.fragments.MapDetailViewFragment"
        android:label="MapDetailViewFragment">
        <action
            android:id="@+id/action_MapDetailViewFragment_to_KYCHomeFragment"
            app:destination="@id/KYCHomeFragment"/>
    </fragment>

</navigation>