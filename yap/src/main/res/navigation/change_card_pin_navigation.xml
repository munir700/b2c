<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_card_pin_navigation"
    app:startDestination="@id/changeCardPinFragment">

    <fragment
        android:id="@+id/changeCardPinFragment"
        android:name="co.yap.modules.dashboard.cards.paymentcarddetail.fragments.ChangeCardPinFragment"
        android:label="ChangeCardPinFragment"
        tools:layout="@layout/fragment_set_card_pin">
        <action
            android:id="@+id/action_changeCardPinFragment_to_setNewCardPinFragment"
            app:destination="@id/setNewCardPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/setNewCardPinFragment"
        android:name="co.yap.modules.dashboard.cards.paymentcarddetail.fragments.SetNewCardPinFragment"
        android:label="SetNewCardPinFragment"
        tools:layout="@layout/fragment_set_card_pin">
        <argument
            android:name="pincode"
            app:argType="string"/>
        <action
            android:id="@+id/action_setNewCardPinFragment_to_confirmNewCardPinFragment"
            app:destination="@id/confirmNewCardPinFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/confirmNewCardPinFragment"
        android:name="co.yap.modules.dashboard.cards.paymentcarddetail.fragments.ConfirmNewCardPinFragment"
        android:label="ConfirmNewCardPinFragment"
        tools:layout="@layout/fragment_set_card_pin" />
</navigation>