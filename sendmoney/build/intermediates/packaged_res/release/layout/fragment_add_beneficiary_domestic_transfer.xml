<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                                    

                 
                            
                                                                                        

           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" android:tag="layout/fragment_add_beneficiary_domestic_transfer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/lyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <TextView
                style="@style/Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:gravity="center"
                android:text="@string/screen_add_beneficiary_detail_display_text_title"
                android:tag="binding_1"                                               
                tools:text="@string/screen_add_beneficiary_detail_display_text_title" />

            <TextView
                style="@style/SmallGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:gravity="center"
                android:text="@string/screen_add_beneficiary_detail_display_text_country"
                android:tag="binding_2"                                                 
                tools:text="@string/screen_add_beneficiary_detail_display_text_country" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium">

                <co.yap.widgets.CoreCircularImageView
                    android:id="@+id/flag_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/bitmap"
                    android:tag="binding_3"                        />

                <TextView
                    style="@style/Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:gravity="center_vertical"
                    android:tag="binding_4"                  
                    tools:text="United Arab Emierates" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@color/greyLight" />

            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSuccessHeading"
                android:tag="binding_5"                                                            
                                                                                
                tools:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etnickName"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/greyLight"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:maxLines="1"
                android:singleLine="true"
                android:tag="binding_6"                    
                                                                                             
                tools:hint="@string/screen_add_beneficiary_detail_input_text_nick_name_hint" />


            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name"
                android:tag="binding_7"                                                             
                                                                                 
                tools:text="@string/screen_add_beneficiary_detail_display_text_transfer_first_name" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFirstName"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/greyLight"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="50"
                android:singleLine="true"
                android:tag="binding_8"                     
                                                                                              
                tools:hint="@string/screen_add_beneficiary_detail_input_text_first_name_hint" />


            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name"
                android:tag="binding_9"                                                            
                                                                                
                tools:text="@string/screen_add_beneficiary_detail_display_text_transfer_last_name" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLastName"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/greyLight"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:maxLength="50"
                android:singleLine="true"
                android:tag="binding_10"                   
                                                                                             
                tools:hint="@string/screen_add_beneficiary_detail_input_text_last_name_hint" />


            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name"
                android:tag="binding_11"                                                  
                                                                                
                tools:text="@string/screen_beneficiary_account_details_display_text_iban" />


            <co.yap.widgets.DrawableClickEditText
                android:id="@+id/etIban"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/greyLight"
                android:drawableEnd="@drawable/ic_support"
                android:drawableRight="@drawable/ic_support"
                android:hint="xxxxxxxxx"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="50"
                android:singleLine="true"
                android:tag="binding_12"               
                                                                      
                app:isDrawableShownWhenTextIsEmpty="true"
                app:popupContentValue="@string/screen_add_beneficiary_display_help_content" />

            <TextView
                style="@style/Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/screen_add_beneficiary_detail_display_text_transfer_nick_name"
                android:tag="binding_13"                                         
                                                                                
                tools:text="@string/screen_sdd_beneficiary_display_confirm_iban" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etConfirmIban"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/greyLight"
                android:hint="xxxxxxxxx"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="50"
                android:singleLine="true"
                android:tag="binding_14"                      
                                                                       />

            <co.yap.widgets.CoreButton
                android:id="@+id/confirmButton"
                style="@style/FragmentsBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_34sdp"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:minWidth="@dimen/_180sdp"
                android:tag="binding_15"                                       
                                                               
                app:layout_constraintBottom_toBottomOf="parent"
                                                                        
                tools:text="@string/screen_add_beneficiary_button_next" />
        </LinearLayout>
    </ScrollView>
         