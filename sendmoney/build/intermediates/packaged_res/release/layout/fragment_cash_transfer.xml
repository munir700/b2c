<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                                    

                                                      

                                           

                                                    
           

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" android:tag="layout/fragment_cash_transfer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white">

            <co.yap.widgets.CoreCircularImageView
                android:id="@+id/ivUserImage"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/ic_store_b2b"
                android:tag="binding_1"         
                                                                                
                                                                                             
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                                                                                  />


            <TextView
                android:id="@+id/tvFullName"
                style="@style/Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_medium"
                android:gravity="center"
                android:tag="binding_2"                                         
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserImage"
                tools:text="Jonathan Newport" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tvIban"
                style="@style/AMicroGrey"
                android:layout_width="wrap_content"
                android:background="@color/transparent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:tag="binding_3"                                          
                                                                                                                                                                                                                   
                                       
                                                                      
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFullName"
                tools:text="AE 1234543112341234" />

            <TextView
                android:id="@+id/tvCurrency"
                style="@style/AMicroGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="AED"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIban"
                tools:text="AED" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/etAmountLayout"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/margin_small"
                android:tag="binding_4"                                 
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCurrency"
                tools:background="@drawable/bg_funds">

                <EditText
                    android:id="@+id/etAmount"
                    style="@style/ATitle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_horizontal|center_vertical"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:labelFor="@+id/etAmount"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:tag="binding_5"                  
                                                            
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0.00" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvFee"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:gravity="center"
                android:tag="binding_6"                                   
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/etAmountLayout"
                tools:text="An AED 50.00 fee will be charged to your YAP account for this transfer" />

            <TextView
                android:id="@+id/tvAvailableBalance"
                style="@style/MicroGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_medium_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:gravity="center"
                android:tag="binding_7"                                 
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFee"
                tools:text="Your available balance is " />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:maxLength="@integer/note_max_length"
                android:singleLine="true"
                android:tag="binding_8"                     
                                                                                             
                app:layout_constraintTop_toBottomOf="@+id/tvAvailableBalance"
                tools:hint="Type a note here" />

            <!--            android:visibility="@{viewModel.parentViewModel.beneficiary.beneficiaryType.equals(`CASHPAYOUT`) ?View.GONE : View.VISIBLE}"-->

            <RelativeLayout
                android:id="@+id/layoutReasonsSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium_large"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_medium_large"
                android:tag="binding_9"                                                                                                     
                app:layout_constraintTop_toBottomOf="@+id/etNote"
                tools:ignore="NotSibling">

                <TextView
                    android:id="@+id/tvSelectReason"
                    style="@style/Small"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_medium_large"
                    android:layout_toStartOf="@+id/ivSelector"
                    android:tag="binding_10"                                   
                    android:text="Select a reason for transfer"
                    tools:text="Select a reason " />

                <ImageView
                    android:id="@+id/ivSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:tag="binding_11"                                   
                    android:src="@drawable/ic_chevron_down"
                    android:tint="@color/colorPrimaryDark" />
                <View
                    android:id="@+id/breakLine"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ivSelector"
                    android:background="@color/greySoft"
                    tools:ignore="MissingConstraints" />

            </RelativeLayout>

            <co.yap.widgets.CoreButton
                android:id="@+id/btnConfirm"
                style="@style/RectangleBtnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_xxl"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/margin_xxl"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:tag="binding_12"                                    
                                                               
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutReasonsSpinner"
                app:layout_constraintVertical_bias="0.987"
                                                                                     />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
         